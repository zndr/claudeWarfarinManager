<Window
    x:Class="WarfarinManager.UI.Views.Switch.SwitchTherapyView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:WarfarinManager.UI.ViewModels"
    xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
    Title="{Binding Title}"
    Width="1400"
    Height="900"
    d:DataContext="{d:DesignInstance Type=vm:SwitchTherapyViewModel}"
    WindowStartupLocation="CenterOwner"
    WindowState="Maximized"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <Border
            Grid.Row="0"
            Padding="15,10">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#667eea" Offset="0" />
                    <GradientStop Color="#764ba2" Offset="1" />
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel
                    Grid.Column="0"
                    Orientation="Horizontal"
                    VerticalAlignment="Center">
                    <TextBlock
                        FontSize="24"
                        Text="🔄 "
                        VerticalAlignment="Center"
                        Foreground="{DynamicResource TextOnPrimaryBrush}" />
                    <TextBlock
                        FontSize="18"
                        FontWeight="SemiBold"
                        Foreground="{DynamicResource TextOnPrimaryBrush}"
                        Text="{Binding Title}"
                        VerticalAlignment="Center" />
                </StackPanel>

                <StackPanel
                    Grid.Column="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
                    <Button
                        x:Name="RefreshButton"
                        Width="120"
                        Height="35"
                        Margin="0,0,10,0"
                        Background="#5568d3"
                        Click="RefreshButton_Click"
                        Content="🔄 Aggiorna"
                        FontSize="13"
                        Foreground="{DynamicResource TextOnPrimaryBrush}"
                        BorderThickness="0"
                        Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border
                                                Background="{TemplateBinding Background}"
                                                CornerRadius="8"
                                                Padding="10,5">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#4050c0" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button
                        Width="120"
                        Height="35"
                        Background="#e74c3c"
                        Click="CloseButton_Click"
                        Content="✖ Chiudi"
                        FontSize="13"
                        Foreground="{DynamicResource TextOnPrimaryBrush}"
                        IsCancel="True"
                        BorderThickness="0"
                        Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border
                                                Background="{TemplateBinding Background}"
                                                CornerRadius="8"
                                                Padding="10,5">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#c0392b" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!--  WebView2 per la visualizzazione interattiva  -->
        <wv2:WebView2
            x:Name="webView"
            Grid.Row="1"
            Source="{Binding GuidePath}" />

        <!--  Status Bar  -->
        <Border
            Grid.Row="2"
            Background="{DynamicResource ContentBackgroundBrush}"
            BorderBrush="#DEE2E6"
            BorderThickness="0,1,0,0"
            Padding="15,8">
            <Grid>
                <TextBlock
                    x:Name="StatusText"
                    FontSize="11"
                    Foreground="#6C757D"
                    Text="Pronto - Compilare il form per generare il protocollo di switch"
                    VerticalAlignment="Center" />
                <TextBlock
                    HorizontalAlignment="Right"
                    FontSize="10"
                    Foreground="#ADB5BD"
                    VerticalAlignment="Center">
                    <Run Text="TaoGEST - Switch Therapy • Basato su Linee Guida ESC/EHRA 2021 e Nota AIFA 97" />
                </TextBlock>
            </Grid>
        </Border>
    </Grid>
</Window>
