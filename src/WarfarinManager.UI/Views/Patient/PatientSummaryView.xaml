<UserControl x:Class="WarfarinManager.UI.Views.Patient.PatientSummaryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:WarfarinManager.UI.ViewModels"
             xmlns:converters="clr-namespace:WarfarinManager.UI.Converters"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1000"
             d:DataContext="{d:DesignInstance Type=vm:PatientSummaryViewModel}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:BoolToCheckConverter x:Key="BoolToCheckConverter"/>
        <converters:BoolToYesNoConverter x:Key="BoolToYesNoConverter"/>

        <!-- Style per le card -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1" Color="Black"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style per titoli sezione -->
        <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#0078D4"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <!-- Style per tabelle -->
        <Style x:Key="DataGridStyle" TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="CanUserResizeRows" Value="False"/>
            <Setter Property="CanUserSortColumns" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E0E0E0"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RowHeight" Value="35"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style x:Key="DataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Toolbar con pulsanti -->
        <Border Grid.Row="0" Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="15,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="â—„ Indietro"
                        Command="{Binding GoBackCommand}"
                        Padding="12,6"
                        Margin="0,0,10,0"
                        Background="#6C757D"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        FontWeight="SemiBold">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="4"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#5A6268"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Content="ðŸ“„ Esporta PDF"
                        Command="{Binding ExportToPdfCommand}"
                        Padding="12,6"
                        Background="#DC3545"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        FontWeight="SemiBold">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="4"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#C82333"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel MaxWidth="1200">

                <!-- Header Paziente -->
                <Border Style="{StaticResource CardStyle}" Background="#0078D4">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="{Binding PatientFullName}"
                                      FontSize="24"
                                  FontWeight="Bold"
                                  Foreground="White"
                                  Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="CF: "
                                      FontSize="13"
                                      Foreground="#E0E0E0"/>
                            <TextBlock Text="{Binding FiscalCode}"
                                      FontSize="13"
                                      FontWeight="SemiBold"
                                      Foreground="White"
                                      Margin="5,0,20,0"/>
                            <TextBlock Text="EtÃ : "
                                      FontSize="13"
                                      Foreground="#E0E0E0"/>
                            <TextBlock Text="{Binding Age}"
                                      FontSize="13"
                                      FontWeight="SemiBold"
                                      Foreground="White"
                                      Margin="5,0,5,0"/>
                            <TextBlock Text="anni"
                                      FontSize="13"
                                      Foreground="#E0E0E0"
                                      Margin="0,0,20,0"/>
                            <TextBlock Text="Sesso: "
                                      FontSize="13"
                                      Foreground="#E0E0E0"/>
                            <TextBlock Text="{Binding Gender}"
                                      FontSize="13"
                                      FontWeight="SemiBold"
                                      Foreground="White"
                                      Margin="5,0,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="ðŸ“„ RIASSUNTO CLINICO"
                                  FontSize="14"
                                  FontWeight="SemiBold"
                                  Foreground="White"
                                  HorizontalAlignment="Right"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Row 1: Valutazione Pre-TAO e Indicazione TAO -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Valutazione Pre-TAO -->
                <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="ðŸ©º VALUTAZIONE PRE-TAO"
                                  Style="{StaticResource SectionTitleStyle}"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- CHA2DS2-VASc -->
                            <Border Grid.Column="0"
                                   Background="#F0F8FF"
                                   BorderBrush="#0078D4"
                                   BorderThickness="2"
                                   CornerRadius="8"
                                   Padding="15"
                                   MinWidth="100">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="CHAâ‚‚DSâ‚‚-VASc"
                                              FontSize="11"
                                              FontWeight="SemiBold"
                                              Foreground="#0078D4"
                                              HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding Cha2DS2VAScScore}"
                                              FontSize="32"
                                              FontWeight="Bold"
                                              Foreground="#0078D4"
                                              HorizontalAlignment="Center"
                                              Margin="0,5"/>
                                </StackPanel>
                            </Border>

                            <!-- HAS-BLED -->
                            <Border Grid.Column="2"
                                   Background="#FFF5F5"
                                   BorderBrush="#E81123"
                                   BorderThickness="2"
                                   CornerRadius="8"
                                   Padding="15"
                                   MinWidth="100">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="HAS-BLED"
                                              FontSize="11"
                                              FontWeight="SemiBold"
                                              Foreground="#E81123"
                                              HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding HasbledScore}"
                                              FontSize="32"
                                              FontWeight="Bold"
                                              Foreground="#E81123"
                                              HorizontalAlignment="Center"
                                              Margin="0,5"/>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <!-- Valutazione globale -->
                        <Border Background="#F0FFF0"
                               BorderBrush="#107C10"
                               BorderThickness="1"
                               CornerRadius="4"
                               Padding="12"
                               Margin="0,15,0,0">
                            <StackPanel>
                                <TextBlock Text="Valutazione:"
                                          FontSize="11"
                                          FontWeight="SemiBold"
                                          Foreground="#107C10"
                                          Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding OverallAssessment}"
                                          FontSize="12"
                                          TextWrapping="Wrap"
                                          LineHeight="18"/>
                            </StackPanel>
                        </Border>

                        <!-- Raccomandazioni -->
                        <Border Background="#FFF9E6"
                               BorderBrush="#F7A800"
                               BorderThickness="1"
                               CornerRadius="4"
                               Padding="12"
                               Margin="0,10,0,0"
                               Visibility="{Binding Recommendations, Converter={StaticResource BoolToVisibilityConverter}}">
                            <StackPanel>
                                <TextBlock Text="Raccomandazioni:"
                                          FontSize="11"
                                          FontWeight="SemiBold"
                                          Foreground="#F7A800"
                                          Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding Recommendations}"
                                          FontSize="11"
                                          TextWrapping="Wrap"
                                          LineHeight="16"
                                          FontStyle="Italic"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Indicazione TAO e TTR -->
                <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="ðŸŽ¯ TERAPIA ANTICOAGULANTE"
                                  Style="{StaticResource SectionTitleStyle}"/>

                        <!-- Indicazione -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Indicazione:"
                                      FontSize="11"
                                      Foreground="#666666"
                                      Margin="0,0,0,3"/>
                            <TextBlock Text="{Binding CurrentIndication}"
                                      FontSize="13"
                                      FontWeight="SemiBold"
                                      TextWrapping="Wrap"/>
                        </StackPanel>

                        <!-- Data inizio -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Inizio terapia:"
                                      FontSize="11"
                                      Foreground="#666666"
                                      Margin="0,0,0,3"/>
                            <TextBlock Text="{Binding TaoStartDate, StringFormat='dd/MM/yyyy'}"
                                      FontSize="13"
                                      FontWeight="SemiBold"/>
                        </StackPanel>

                        <!-- Target INR -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Range INR target:"
                                      FontSize="11"
                                      Foreground="#666666"
                                      Margin="0,0,0,3"/>
                            <TextBlock Text="{Binding TargetINRRange}"
                                      FontSize="13"
                                      FontWeight="SemiBold"/>
                        </StackPanel>

                        <!-- TTR -->
                        <Border Background="#F0F8FF"
                               BorderBrush="#0078D4"
                               BorderThickness="2"
                               CornerRadius="8"
                               Padding="15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="TTR (Time in Therapeutic Range)"
                                              FontSize="12"
                                              FontWeight="SemiBold"
                                              Foreground="#0078D4"
                                              Margin="0,0,0,5"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding CurrentTTR, StringFormat='{}{0:F1}%'}"
                                                  FontSize="28"
                                                  FontWeight="Bold"
                                                  Foreground="#0078D4"
                                                  VerticalAlignment="Center"/>
                                        <Border Background="#107C10"
                                               CornerRadius="10"
                                               Padding="8,4"
                                               Margin="10,0,0,0"
                                               VerticalAlignment="Center">
                                            <TextBlock Text="{Binding TTRQualityLevel}"
                                                      FontSize="11"
                                                      FontWeight="SemiBold"
                                                      Foreground="White"/>
                                        </Border>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                        <TextBlock Text="{Binding TotalControlsCount}"
                                                  FontSize="11"
                                                  Foreground="#666666"/>
                                        <TextBlock Text=" controlli in "
                                                  FontSize="11"
                                                  Foreground="#666666"/>
                                        <TextBlock Text="{Binding DaysInTherapy}"
                                                  FontSize="11"
                                                  Foreground="#666666"/>
                                        <TextBlock Text=" giorni di terapia"
                                                  FontSize="11"
                                                  Foreground="#666666"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Ultimi Controlli INR -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="ðŸ“Š ULTIMI 10 CONTROLLI INR"
                              Style="{StaticResource SectionTitleStyle}"/>

                    <DataGrid ItemsSource="{Binding RecentINRControls}"
                             Style="{StaticResource DataGridStyle}"
                             ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Data"
                                              Binding="{Binding ControlDate, StringFormat='dd/MM/yyyy'}"
                                              Width="100"/>
                            <DataGridTextColumn Header="INR"
                                              Binding="{Binding INRValue, StringFormat='F2'}"
                                              Width="70">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Foreground" Value="#0078D4"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Dose settimanale (mg)"
                                              Binding="{Binding WeeklyDose, StringFormat='F2'}"
                                              Width="140"/>
                            <DataGridTextColumn Header="Variazione dose"
                                              Binding="{Binding DosageChangeText}"
                                              Width="130"/>
                            <DataGridTemplateColumn Header="In range" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding IsInRange, Converter={StaticResource BoolToCheckConverter}}"
                                                  HorizontalAlignment="Center"
                                                  FontSize="16"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Note"
                                              Binding="{Binding Notes}"
                                              Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>

            <!-- Bridge Therapy -->
            <Border Style="{StaticResource CardStyle}"
                   Visibility="{Binding HasBridgeTherapies, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel>
                    <TextBlock Text="ðŸ’‰ BRIDGE THERAPY ESEGUITE"
                              Style="{StaticResource SectionTitleStyle}"/>

                    <DataGrid ItemsSource="{Binding BridgeTherapies}"
                             Style="{StaticResource DataGridStyle}"
                             ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Data intervento"
                                              Binding="{Binding SurgeryDate, StringFormat='dd/MM/yyyy'}"
                                              Width="130"/>
                            <DataGridTextColumn Header="Tipo intervento"
                                              Binding="{Binding SurgeryType}"
                                              Width="*"/>
                            <DataGridTextColumn Header="Rischio tromboembolico"
                                              Binding="{Binding ThromboembolicRisk}"
                                              Width="180"/>
                            <DataGridTemplateColumn Header="Bridge consigliata" Width="130">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding BridgeRecommended, Converter={StaticResource BoolToYesNoConverter}}"
                                                  HorizontalAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
