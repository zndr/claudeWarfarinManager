<UserControl
    x:Class="WarfarinManager.UI.Views.Patient.INRHistoryView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:charts="clr-namespace:WarfarinManager.UI.Views.Charts"
    xmlns:converters="clr-namespace:WarfarinManager.UI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:WarfarinManager.UI.ViewModels"
    d:DataContext="{d:DesignInstance Type=vm:INRHistoryViewModel}"
    d:DesignHeight="600"
    d:DesignWidth="900"
    mc:Ignorable="d">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:PercentageToWidthConverter x:Key="PercentageToWidthConverter" />

        <!--  Stile toggle button per filtri temporali  -->
        <Style x:Key="TimeFilterToggleStyle" TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border
                            x:Name="border"
                            Padding="10,5"
                            Background="Transparent"
                            BorderBrush="#D0D0D0"
                            BorderThickness="1"
                            CornerRadius="3"
                            Cursor="Hand">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0078D4" />
                                <Setter TargetName="border" Property="BorderBrush" Value="#0078D4" />
                                <Setter Property="Foreground" Value="White" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E8E8E8" />
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True" />
                                    <Condition Property="IsChecked" Value="True" />
                                </MultiTrigger.Conditions>
                                <Setter TargetName="border" Property="Background" Value="#005A9E" />
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Foreground" Value="#333333" />
            <Setter Property="GroupName" Value="TimeFilter" />
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <!--  Riga 0: Header compatto con TTR + Statistiche + Filtri  -->
            <RowDefinition Height="Auto" />
            <!--  Riga 1: Contenuto principale (tabella + grafico)  -->
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  HEADER COMPATTO: TTR, Statistiche e Filtri su una riga  -->
        <Border
            Grid.Row="0"
            Padding="15,10"
            Background="#F8F9FA"
            BorderBrush="#E0E0E0"
            BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <!--  TTR Indicator  -->
                    <ColumnDefinition Width="Auto" />
                    <!--  Separatore  -->
                    <ColumnDefinition Width="Auto" />
                    <!--  Statistiche  -->
                    <ColumnDefinition Width="*" />
                    <!--  Filtri e Export  -->
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  TTR INDICATOR COMPATTO  -->
                <Border
                    Grid.Column="0"
                    MinWidth="140"
                    Padding="12,8"
                    Background="{Binding TtrBackgroundColor}"
                    CornerRadius="6">
                    <StackPanel HorizontalAlignment="Center">
                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                            <TextBlock
                                VerticalAlignment="Bottom"
                                FontSize="28"
                                FontWeight="Bold"
                                Foreground="{Binding TtrTextColor}"
                                Text="{Binding TtrPercentage, StringFormat={}{0:F1}}" />
                            <TextBlock
                                Margin="2,0,0,2"
                                VerticalAlignment="Bottom"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Foreground="{Binding TtrTextColor}"
                                Text="%" />
                        </StackPanel>
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="11"
                            FontWeight="SemiBold"
                            Foreground="{Binding TtrTextColor}"
                            Text="{Binding TtrQualityText}" />
                        <!--  Barra progresso mini  -->
                        <Grid
                            Width="100"
                            Height="4"
                            Margin="0,4,0,0">
                            <Border
                                Background="#40000000"
                                CornerRadius="2"
                                Opacity="0.3" />
                            <Border
                                Width="{Binding TtrPercentage, Converter={StaticResource PercentageToWidthConverter}, ConverterParameter=100}"
                                HorizontalAlignment="Left"
                                Background="{Binding TtrTextColor}"
                                CornerRadius="2" />
                        </Grid>
                    </StackPanel>
                </Border>

                <!--  Separatore verticale  -->
                <Border
                    Grid.Column="1"
                    Width="1"
                    Margin="15,5"
                    Background="#D0D0D0" />

                <!--  STATISTICHE COMPATTE  -->
                <ItemsControl Grid.Column="2" VerticalAlignment="Center">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.Items>
                        <!--  NÂ° Controlli  -->
                        <Border
                            Margin="0,0,20,0"
                            Padding="8,4"
                            Background="White"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            CornerRadius="4">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontSize="11"
                                    Foreground="#666666"
                                    Text="Controlli: " />
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Foreground="#333333"
                                    Text="{Binding ControlCount}" />
                            </StackPanel>
                        </Border>

                        <!--  INR Medio  -->
                        <Border
                            Margin="0,0,20,0"
                            Padding="8,4"
                            Background="White"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            CornerRadius="4">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontSize="11"
                                    Foreground="#666666"
                                    Text="INR medio: " />
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Foreground="#333333"
                                    Text="{Binding AverageINR, StringFormat={}{0:F2}}" />
                            </StackPanel>
                        </Border>

                        <!--  % In Range  -->
                        <Border
                            Margin="0,0,20,0"
                            Padding="8,4"
                            Background="White"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            CornerRadius="4">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontSize="11"
                                    Foreground="#666666"
                                    Text="In range: " />
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Foreground="#107C10"
                                    Text="{Binding InRangePercentage, StringFormat={}{0:F0}%}" />
                            </StackPanel>
                        </Border>

                        <!--  Ultimo INR  -->
                        <Border
                            Padding="8,4"
                            Background="White"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            CornerRadius="4">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontSize="11"
                                    Foreground="#666666"
                                    Text="Ultimo: " />
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Foreground="#0078D4"
                                    Text="{Binding LastINRDisplay}" />
                            </StackPanel>
                        </Border>
                    </ItemsControl.Items>
                </ItemsControl>

                <!--  FILTRI E EXPORT  -->
                <StackPanel
                    Grid.Column="3"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <!--  Filtri temporali  -->
                    <StackPanel Margin="0,0,15,0" Orientation="Horizontal">
                        <RadioButton
                            Command="{Binding SetTimeRangeCommand}"
                            CommandParameter="3"
                            Content="3M"
                            Style="{StaticResource TimeFilterToggleStyle}" />
                        <RadioButton
                            Margin="3,0,0,0"
                            Command="{Binding SetTimeRangeCommand}"
                            CommandParameter="6"
                            Content="6M"
                            Style="{StaticResource TimeFilterToggleStyle}" />
                        <RadioButton
                            Margin="3,0,0,0"
                            Command="{Binding SetTimeRangeCommand}"
                            CommandParameter="12"
                            Content="12M"
                            IsChecked="True"
                            Style="{StaticResource TimeFilterToggleStyle}" />
                        <RadioButton
                            Margin="3,0,0,0"
                            Command="{Binding SetTimeRangeCommand}"
                            CommandParameter="0"
                            Content="Tutto"
                            Style="{StaticResource TimeFilterToggleStyle}" />
                    </StackPanel>

                    <!--  Export CSV  -->
                    <Button
                        Padding="10,5"
                        Background="#107C10"
                        BorderThickness="0"
                        Command="{Binding ExportToCsvCommand}"
                        Cursor="Hand"
                        ToolTip="Esporta storico in CSV">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border
                                    Padding="{TemplateBinding Padding}"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="4">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="12"
                                Foreground="White"
                                Text="ðŸ“¥ CSV" />
                        </StackPanel>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#0E6B0E" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!--  CONTENUTO PRINCIPALE: Tabella sopra, Grafico sotto  -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <!--  Tabella: occupa 60% dello spazio  -->
                <RowDefinition Height="3*" MinHeight="150" />
                <!--  Splitter  -->
                <RowDefinition Height="Auto" />
                <!--  Grafico: occupa 40% dello spazio  -->
                <RowDefinition Height="2*" MinHeight="120" />
            </Grid.RowDefinitions>

            <!--  TABELLA STORICO INR  -->
            <DataGrid
                Grid.Row="0"
                AlternatingRowBackground="#FAFAFA"
                AutoGenerateColumns="False"
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="0"
                CanUserAddRows="False"
                CanUserDeleteRows="False"
                CanUserReorderColumns="False"
                CanUserResizeRows="False"
                FontSize="12"
                GridLinesVisibility="Horizontal"
                HeadersVisibility="Column"
                HorizontalGridLinesBrush="#F0F0F0"
                IsReadOnly="True"
                ItemsSource="{Binding InrHistoryRows}"
                RowHeight="32"
                SelectedItem="{Binding SelectedRow}"
                SelectionMode="Single"
                SelectionUnit="FullRow">

                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#F5F5F5" />
                        <Setter Property="Foreground" Value="#333333" />
                        <Setter Property="FontWeight" Value="SemiBold" />
                        <Setter Property="FontSize" Value="11" />
                        <Setter Property="Padding" Value="8,6" />
                        <Setter Property="BorderThickness" Value="0,0,0,1" />
                        <Setter Property="BorderBrush" Value="#D0D0D0" />
                        <Setter Property="HorizontalContentAlignment" Value="Left" />
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="8,0" />
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="VerticalAlignment" Value="Center" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridCell">
                                    <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#E3F2FD" />
                                <Setter Property="Foreground" Value="Black" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.CellStyle>

                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="{Binding RowBackgroundColor}" />
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#E3F2FD" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F0F7FF" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>

                <DataGrid.Columns>
                    <!--  Data  -->
                    <DataGridTextColumn
                        Width="85"
                        Binding="{Binding ControlDate, StringFormat=dd/MM/yyyy}"
                        Header="Data" />

                    <!--  INR con colore  -->
                    <DataGridTemplateColumn Width="70" Header="INR">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Padding="4,2"
                                    FontWeight="SemiBold"
                                    Foreground="{Binding StatusColor}"
                                    Text="{Binding INRValue, StringFormat={}{0:F2}}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!--  Status  -->
                    <DataGridTextColumn
                        Width="90"
                        Binding="{Binding StatusText}"
                        Header="Stato" />

                    <!--  Dose Settimanale  -->
                    <DataGridTextColumn
                        Width="80"
                        Binding="{Binding CurrentWeeklyDose, StringFormat={}{0:F1} mg}"
                        Header="Dose/sett" />

                    <!--  Variazione %  -->
                    <DataGridTemplateColumn Width="75" Header="Var. %">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    FontWeight="SemiBold"
                                    Foreground="{Binding VariationColor}"
                                    Text="{Binding DoseVariationDisplay}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!--  Giorni  -->
                    <DataGridTextColumn
                        Width="55"
                        Binding="{Binding DaysSincePreviousDisplay}"
                        Header="Giorni" />

                    <!--  Fase  -->
                    <DataGridTextColumn
                        Width="95"
                        Binding="{Binding PhaseDescription}"
                        Header="Fase" />

                    <!--  Note  -->
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Notes}"
                        Header="Note">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                                <Setter Property="ToolTip" Value="{Binding Notes}" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>

            <!--  SPLITTER  -->
            <GridSplitter
                Grid.Row="1"
                Height="6"
                HorizontalAlignment="Stretch"
                Background="#E8E8E8"
                Cursor="SizeNS"
                ResizeBehavior="PreviousAndNext" />

            <!--  GRAFICO INR  -->
            <Border
                Grid.Row="2"
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="0,1,0,0">
                <Grid>
                    <!--  Titolo grafico  -->
                    <TextBlock
                        Margin="10,5,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        FontSize="11"
                        FontWeight="SemiBold"
                        Foreground="#666666"
                        Text="ðŸ“ˆ Andamento INR" />

                    <!--  Chart View  -->
                    <charts:INRChartView Margin="0,25,0,0" DataContext="{Binding ChartViewModel}" />
                </Grid>
            </Border>

            <!--  Messaggio lista vuota  -->
            <StackPanel
                Grid.Row="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Visibility="{Binding HasNoData, Converter={StaticResource BoolToVisibilityConverter}}">
                <TextBlock
                    Margin="0,0,0,5"
                    HorizontalAlignment="Center"
                    FontSize="14"
                    Foreground="#A0A0A0"
                    Text="ðŸ“‹ Nessun controllo INR registrato" />
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="12"
                    Foreground="#A0A0A0"
                    Text="Aggiungi il primo controllo per visualizzare lo storico" />
            </StackPanel>
        </Grid>

        <!--  LOADING OVERLAY  -->
        <Grid
            Grid.RowSpan="2"
            Background="#80FFFFFF"
            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="#0078D4"
                    Text="â³ Caricamento storico INR..." />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
