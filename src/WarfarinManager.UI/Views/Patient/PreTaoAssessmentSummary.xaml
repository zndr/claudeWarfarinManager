<UserControl x:Class="WarfarinManager.UI.Views.Patient.PreTaoAssessmentSummary"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:WarfarinManager.UI.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:PreTaoAssessmentViewModel}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Compatto -->
        <Border Grid.Row="0"
                Background="#0078D4"
                Padding="15,8">
            <TextBlock Text="VALUTAZIONE PRE-TAO"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="White"/>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="15">
            <StackPanel>

                <!-- Dashboard Scores Minimo -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,5,0,12">
                    <!-- CHA2DS2VASc -->
                    <Border Background="#F0F8FF" BorderBrush="#0078D4" BorderThickness="1"
                            CornerRadius="3" Padding="8,5" Margin="0,0,5,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="CHAâ‚‚DSâ‚‚-VASc: "
                                      FontSize="10" FontWeight="SemiBold"
                                      Foreground="#0078D4"
                                      VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding CHA2DS2VAScScore, Mode=OneWay}"
                                      FontSize="15"
                                      FontWeight="Bold"
                                      Foreground="#0078D4"
                                      VerticalAlignment="Center"
                                      Margin="3,0,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- HAS-BLED -->
                    <Border Background="#FFF5F5" BorderBrush="#E81123" BorderThickness="1"
                            CornerRadius="3" Padding="8,5" Margin="0,0,5,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="HAS-BLED: "
                                      FontSize="10" FontWeight="SemiBold"
                                      Foreground="#E81123"
                                      VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding HASBLEDScore, Mode=OneWay}"
                                      FontSize="15"
                                      FontWeight="Bold"
                                      Foreground="#E81123"
                                      VerticalAlignment="Center"
                                      Margin="3,0,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Contatori -->
                    <Border Background="#FFF4E6" BorderBrush="#F7630C" BorderThickness="1"
                            CornerRadius="3" Padding="8,5" Margin="0,0,5,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Contr.Rel.: "
                                      FontSize="10" FontWeight="SemiBold"
                                      Foreground="#F7630C"
                                      VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding RelativeContraindicationsCount, Mode=OneWay}"
                                      FontSize="15"
                                      FontWeight="Bold"
                                      Foreground="#F7630C"
                                      VerticalAlignment="Center"
                                      Margin="3,0,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Background="#FFFEF9" BorderBrush="#E81123" BorderThickness="1"
                            CornerRadius="3" Padding="8,5">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Fatt.Rischio: "
                                      FontSize="10" FontWeight="SemiBold"
                                      Foreground="#E81123"
                                      VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding AdverseEventRiskFactorsCount, Mode=OneWay}"
                                      FontSize="15"
                                      FontWeight="Bold"
                                      Foreground="#E81123"
                                      VerticalAlignment="Center"
                                      Margin="3,0,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Valutazione Globale -->
                <Border Background="#F0FFF0" BorderBrush="#107C10" BorderThickness="1"
                        CornerRadius="4" Padding="10" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="VALUTAZIONE GLOBALE"
                                  FontWeight="Bold"
                                  FontSize="10"
                                  Foreground="#107C10"
                                  Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding OverallAssessment, Mode=OneWay}"
                                  FontSize="11"
                                  TextWrapping="Wrap"
                                  LineHeight="15"/>
                    </StackPanel>
                </Border>

                <!-- Checkbox Marcati: CHA2DS2VASc -->
                <Border Background="#F8F8F8" BorderBrush="#E0E0E0" BorderThickness="1"
                        CornerRadius="4" Padding="10" Margin="0,0,0,8">
                    <StackPanel>
                        <TextBlock Text="CHAâ‚‚DSâ‚‚-VASc - Fattori Presenti"
                                  FontWeight="SemiBold"
                                  FontSize="10"
                                  Foreground="#0078D4"
                                  Margin="0,0,0,5"/>
                        <StackPanel>
                            <TextBlock Text="â€¢ Scompenso cardiaco" FontSize="10" Margin="8,1"
                                      Visibility="{Binding CongestiveHeartFailure, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <TextBlock Text="â€¢ Ipertensione" FontSize="10" Margin="8,1"
                                      Visibility="{Binding Hypertension, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <TextBlock Text="â€¢ EtÃ  â‰¥75 anni" FontSize="10" Margin="8,1"
                                      Visibility="{Binding Age75OrMore, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <TextBlock Text="â€¢ Diabete" FontSize="10" Margin="8,1"
                                      Visibility="{Binding Diabetes, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <TextBlock Text="â€¢ Stroke/TIA/TE pregresso" FontSize="10" Margin="8,1"
                                      Visibility="{Binding PriorStrokeTiaTE, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <TextBlock Text="â€¢ Vasculopatia" FontSize="10" Margin="8,1"
                                      Visibility="{Binding VascularDisease, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <TextBlock Text="â€¢ EtÃ  65-74 anni" FontSize="10" Margin="8,1"
                                      Visibility="{Binding Age65To74, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <TextBlock Text="â€¢ Sesso femminile" FontSize="10" Margin="8,1"
                                      Visibility="{Binding Female, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Checkbox Marcati: HAS-BLED -->
                <Border Background="#F8F8F8" BorderBrush="#E0E0E0" BorderThickness="1"
                        CornerRadius="4" Padding="10" Margin="0,0,0,8">
                    <StackPanel>
                        <TextBlock Text="HAS-BLED - Fattori Presenti"
                                  FontWeight="SemiBold"
                                  FontSize="10"
                                  Foreground="#E81123"
                                  Margin="0,0,0,5"/>
                        <StackPanel>
                            <TextBlock Text="â€¢ Ipertensione non controllata" FontSize="10" Margin="8,1"
                                      Visibility="{Binding HasBledHypertension, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <TextBlock Text="â€¢ Funzione renale anormale" FontSize="10" Margin="8,1"
                                      Visibility="{Binding AbnormalRenalFunction, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <TextBlock Text="â€¢ Funzione epatica anormale" FontSize="10" Margin="8,1"
                                      Visibility="{Binding AbnormalLiverFunction, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <TextBlock Text="â€¢ Storia di stroke" FontSize="10" Margin="8,1"
                                      Visibility="{Binding StrokeHistory, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <TextBlock Text="â€¢ Emorragia pregressa" FontSize="10" Margin="8,1"
                                      Visibility="{Binding BleedingHistory, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <TextBlock Text="â€¢ INR labile" FontSize="10" Margin="8,1"
                                      Visibility="{Binding LabileINR, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <TextBlock Text="â€¢ EtÃ  avanzata (>65 anni)" FontSize="10" Margin="8,1"
                                      Visibility="{Binding Elderly, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <TextBlock Text="â€¢ Farmaci predisponenti" FontSize="10" Margin="8,1"
                                      Visibility="{Binding DrugsPredisposing, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <TextBlock Text="â€¢ Abuso di alcool" FontSize="10" Margin="8,1"
                                      Visibility="{Binding AlcoholAbuse, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Raccomandazioni -->
                <Border Background="#FFF9E6" BorderBrush="#F7A800" BorderThickness="1"
                        CornerRadius="4" Padding="10" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="RACCOMANDAZIONI"
                                  FontWeight="Bold"
                                  FontSize="10"
                                  Foreground="#F7A800"
                                  Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding Recommendations, Mode=OneWay}"
                                  FontSize="11"
                                  TextWrapping="Wrap"
                                  LineHeight="15"/>
                        <TextBlock Text="Nessuna raccomandazione inserita"
                                  FontSize="11"
                                  FontStyle="Italic"
                                  Foreground="Gray"
                                  Visibility="{Binding Recommendations, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    </StackPanel>
                </Border>

                <!-- Pulsante Apri Valutazione Completa -->
                <Button Command="{Binding OpenAssessmentDialogCommand}"
                        Background="#0078D4"
                        Foreground="White"
                        FontSize="12"
                        FontWeight="SemiBold"
                        Padding="15,10"
                        BorderThickness="0"
                        Cursor="Hand"
                        HorizontalAlignment="Stretch"
                        Margin="0,5,0,0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="4"
                                                Padding="{TemplateBinding Padding}">
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <TextBlock Text="ðŸ“‹" FontSize="14" Margin="0,0,6,0"/>
                                                <TextBlock Text="Apri Valutazione Completa"
                                                          FontSize="12" FontWeight="SemiBold"
                                                          VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#005A9E"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
