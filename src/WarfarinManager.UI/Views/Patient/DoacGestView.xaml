<UserControl x:Class="WarfarinManager.UI.Views.Patient.DoacGestView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:WarfarinManager.UI.ViewModels"
             xmlns:converters="clr-namespace:WarfarinManager.UI.Converters"
             mc:Ignorable="d"
             d:DesignHeight="900" d:DesignWidth="1200"
             d:DataContext="{d:DesignInstance Type=vm:DoacGestViewModel}">

    <UserControl.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:NullableDecimalConverter x:Key="NullableDecimalConverter" />
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter" />
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
        <converters:ListToStringConverter x:Key="ListToStringConverter" />
        <converters:CountToVisibilityInverseConverter x:Key="CountToVisibilityInverseConverter" />
        <converters:NullableIntConverter x:Key="NullableIntConverter" />

        <!-- Stile per GroupBox -->
        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
        </Style>

        <!-- Stile per TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{DynamicResource InputBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
        </Style>

        <!-- Stile per ComboBox -->
        <Style TargetType="ComboBox">
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{DynamicResource InputBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
        </Style>

        <!-- Stile per CheckBox -->
        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="0,8,15,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
        </Style>

        <!-- Stile per Button -->
        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextOnPrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource PrimaryHoverBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Stile per TextBlock labels -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="{DynamicResource ContentBackgroundBrush}">
        <!-- Content -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel MaxWidth="1400">

                <!-- Alert Clinici (in alto per massima visibilitÃ ) -->
                <ItemsControl ItemsSource="{Binding AlertClinici}" Margin="0,0,0,15"
                              Visibility="{Binding AlertClinici.Count, Converter={StaticResource CountToVisibilityInverseConverter}}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{DynamicResource DangerBackgroundBrush}"
                                    BorderBrush="{DynamicResource DangerBrush}"
                                    BorderThickness="2"
                                    Padding="12"
                                    Margin="0,0,0,8"
                                    CornerRadius="5">
                                <TextBlock Text="{Binding}"
                                           TextWrapping="Wrap"
                                           FontWeight="SemiBold"
                                           FontSize="13"
                                           Foreground="{DynamicResource DangerBrush}"/>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Valutazione Appropriatezza DOAC (in alto se non appropriato) -->
                <GroupBox Header="âš ï¸ Valutazione Appropriatezza DOAC"
                          Visibility="{Binding IsDoacAppropriato, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                          Margin="0,0,0,15">
                    <StackPanel>
                        <!-- Alert DOAC Controindicato/Sconsigliato -->
                        <Border Padding="15" CornerRadius="5" Margin="0,0,0,10">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="{DynamicResource WarningBackgroundBrush}"/>
                                    <Setter Property="BorderBrush" Value="{DynamicResource WarningBrush}"/>
                                    <Setter Property="BorderThickness" Value="2"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsDoacContraindicato}" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource DangerBackgroundBrush}"/>
                                            <Setter Property="BorderBrush" Value="{DynamicResource DangerBrush}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <StackPanel>
                                <TextBlock Text="{Binding RaccomandazioneDoac}"
                                           FontWeight="Bold"
                                           FontSize="14"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,10">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="{DynamicResource WarningBrush}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsDoacContraindicato}" Value="True">
                                                    <Setter Property="Foreground" Value="{DynamicResource DangerBrush}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <!-- DOAC Consigliato -->
                                <Border Background="{DynamicResource SuccessBackgroundBrush}"
                                        Padding="10"
                                        CornerRadius="5"
                                        Visibility="{Binding DoacConsigliato, Converter={StaticResource NullToVisibilityConverter}}">
                                    <StackPanel>
                                        <TextBlock Text="Alternativa Consigliata:"
                                                   FontWeight="Bold"
                                                   Foreground="{DynamicResource SuccessBrush}"/>
                                        <TextBlock FontSize="16"
                                                   FontWeight="Bold"
                                                   Foreground="{DynamicResource SuccessBrush}"
                                                   Margin="0,5,0,0">
                                            <Run Text="âœ“ "/>
                                            <Run Text="{Binding DoacConsigliato}"/>
                                        </TextBlock>
                                        <TextBlock Text="{Binding MotivoConsiglioCambio}"
                                                   FontSize="12"
                                                   TextWrapping="Wrap"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                   Margin="0,5,0,0"/>
                                    </StackPanel>
                                </Border>

                                <!-- Suggerimento Switch a Warfarin -->
                                <Border Background="{DynamicResource InfoBackgroundBrush}"
                                        Padding="10"
                                        CornerRadius="5"
                                        Margin="0,10,0,0"
                                        Visibility="{Binding SuggerisciSwitchWarfarin, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <StackPanel>
                                        <TextBlock Text="ðŸ’Š Considerare Switch a Warfarin"
                                                   FontWeight="Bold"
                                                   FontSize="14"
                                                   Foreground="{DynamicResource PrimaryBrush}"/>
                                        <TextBlock Text="{Binding MotivoSwitchWarfarin}"
                                                   FontSize="12"
                                                   TextWrapping="Wrap"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                   Margin="0,5,0,0"/>
                                    </StackPanel>
                                </Border>

                                <!-- Altre Alternative -->
                                <ItemsControl ItemsSource="{Binding DoacAlternativi}" Margin="0,10,0,0">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="{DynamicResource CardBackgroundBrush}"
                                                    Padding="8"
                                                    Margin="0,3,0,0"
                                                    CornerRadius="3"
                                                    BorderBrush="{DynamicResource BorderBrush}"
                                                    BorderThickness="1">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding Nome}"
                                                               FontWeight="SemiBold"
                                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                                               Width="100"/>
                                                    <TextBlock Text="{Binding Vantaggi, Converter={StaticResource ListToStringConverter}}"
                                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                                               TextWrapping="Wrap"/>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </GroupBox>

                <!-- Parametri Laboratorio - Layout compatto su una riga -->
                <GroupBox Header="ðŸ“Š Parametri Laboratorio">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,8,0" ToolTip="Peso (kg)">
                            <TextBlock Text="Peso" Style="{StaticResource LabelStyle}"/>
                            <TextBox Text="{Binding Peso, UpdateSourceTrigger=LostFocus, Converter={StaticResource NullableDecimalConverter}}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="0,0,8,0" ToolTip="Creatinina (mg/dL)">
                            <TextBlock Text="Creat." Style="{StaticResource LabelStyle}"/>
                            <TextBox Text="{Binding Creatinina, UpdateSourceTrigger=LostFocus, Converter={StaticResource NullableDecimalConverter}}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" Margin="0,0,8,0" ToolTip="Emoglobina (g/dL)">
                            <TextBlock Text="Hb" Style="{StaticResource LabelStyle}"/>
                            <TextBox Text="{Binding Emoglobina, UpdateSourceTrigger=LostFocus, Converter={StaticResource NullableDecimalConverter}}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="3" Margin="0,0,8,0" ToolTip="Piastrine (/Î¼L)">
                            <TextBlock Text="PP" Style="{StaticResource LabelStyle}"/>
                            <TextBox Text="{Binding Piastrine, UpdateSourceTrigger=LostFocus}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="4" Margin="0,0,8,0" ToolTip="AST (U/L)">
                            <TextBlock Text="AST" Style="{StaticResource LabelStyle}"/>
                            <TextBox Text="{Binding Ast, UpdateSourceTrigger=LostFocus}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="5" Margin="0,0,8,0" ToolTip="ALT (U/L)">
                            <TextBlock Text="ALT" Style="{StaticResource LabelStyle}"/>
                            <TextBox Text="{Binding Alt, UpdateSourceTrigger=LostFocus}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="6" Margin="0,0,8,0" ToolTip="Bilirubina (mg/dL)">
                            <TextBlock Text="Bil" Style="{StaticResource LabelStyle}"/>
                            <TextBox Text="{Binding Bilirubina, UpdateSourceTrigger=LostFocus, Converter={StaticResource NullableDecimalConverter}}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="7" Margin="0,0,8,0" ToolTip="GGT (U/L)">
                            <TextBlock Text="GGT" Style="{StaticResource LabelStyle}"/>
                            <TextBox Text="{Binding Ggt, UpdateSourceTrigger=LostFocus, Converter={StaticResource NullableDecimalConverter}}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="8" Margin="0,0,8,0" ToolTip="CrCl (mL/min) - Cockcroft-Gault">
                            <TextBlock Text="ClCr" Style="{StaticResource LabelStyle}"/>
                            <TextBox Text="{Binding CrClCockroft, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource NullableIntConverter}}"
                                     IsReadOnly="{Binding CrClCalcolato}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="9" Orientation="Horizontal" VerticalAlignment="Bottom">
                            <Button Content="âš™ï¸"
                                    ToolTip="Calcola CrCl"
                                    Command="{Binding CalcolaClearanceCreatininaCommand}"
                                    Padding="10,6"
                                    Margin="0,0,5,0"/>
                            <Button Content="ðŸ’¾ Salva"
                                    ToolTip="Salva rilevazione"
                                    Command="{Binding SalvaRilevazioneCommand}"
                                    Background="{DynamicResource SuccessBrush}"
                                    Padding="12,6">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{DynamicResource SuccessHoverBrush}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- DOAC e Indicazione -->
                <GroupBox Header="ðŸ’Š DOAC e Indicazione Terapeutica">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="DOAC Selezionato" Style="{StaticResource LabelStyle}"/>
                            <ComboBox ItemsSource="{Binding DoacOptions}"
                                      SelectedItem="{Binding DoacSelezionato}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Indicazione" Style="{StaticResource LabelStyle}"/>
                            <ComboBox ItemsSource="{Binding IndicazioniOptions}"
                                      SelectedItem="{Binding Indicazione}"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- Fattori di Rischio HAS-BLED -->
                <GroupBox Header="âš ï¸ Fattori di Rischio HAS-BLED">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Column 1 -->
                        <CheckBox Grid.Row="0" Grid.Column="0"
                                  Content="H - Ipertensione non controllata"
                                  IsChecked="{Binding Ipertensione}"/>
                        <CheckBox Grid.Row="1" Grid.Column="0"
                                  Content="A - Disfunzione Renale"
                                  IsChecked="{Binding DisfunzioneRenale}"/>
                        <CheckBox Grid.Row="2" Grid.Column="0"
                                  Content="A - Disfunzione Epatica"
                                  IsChecked="{Binding DisfunzioneEpatica}"/>
                        <CheckBox Grid.Row="3" Grid.Column="0"
                                  Content="Cirrosi"
                                  IsChecked="{Binding Cirrosi}"/>

                        <!-- Column 2 -->
                        <CheckBox Grid.Row="0" Grid.Column="1"
                                  Content="Ipertensione Portale"
                                  IsChecked="{Binding IpertensPortale}"/>
                        <CheckBox Grid.Row="1" Grid.Column="1"
                                  Content="S - Storia di Stroke/TIA"
                                  IsChecked="{Binding StoriaStroke}"/>
                        <CheckBox Grid.Row="2" Grid.Column="1"
                                  Content="B - Storia Sanguinamento"
                                  IsChecked="{Binding StoriaSanguinamento}"/>
                        <CheckBox Grid.Row="3" Grid.Column="1"
                                  Content="L - INR Labile"
                                  IsChecked="{Binding InrLabile}"/>

                        <!-- Column 3 -->
                        <CheckBox Grid.Row="0" Grid.Column="2"
                                  Content="D - Antiaggreganti"
                                  IsChecked="{Binding Antiaggreganti}"/>
                        <CheckBox Grid.Row="1" Grid.Column="2"
                                  Content="D - FANS"
                                  IsChecked="{Binding Fans}"/>
                        <CheckBox Grid.Row="2" Grid.Column="2"
                                  Content="D - Abuso di Alcol"
                                  IsChecked="{Binding AbusoDiAlcol}"/>
                    </Grid>
                </GroupBox>

                <!-- Pulsante Calcola -->
                <Button Content="ðŸ”¬ Calcola Dosaggio e Valuta Appropriatezza"
                        Command="{Binding CalcolaDosaggioCommand}"
                        HorizontalAlignment="Center"
                        Padding="20,12"
                        FontSize="14"
                        FontWeight="Bold"
                        Margin="0,0,0,15"/>

                <!-- Risultati Calcoli -->
                <GroupBox Header="ðŸ“ˆ Risultati e Raccomandazioni">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0"
                                    Background="{DynamicResource InfoBackgroundBrush}"
                                    Padding="15"
                                    Margin="0,0,10,0"
                                    BorderBrush="{DynamicResource BorderBrush}"
                                    BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="HAS-BLED Score"
                                               FontWeight="Bold"
                                               FontSize="14"
                                               Foreground="{DynamicResource PrimaryBrush}"/>
                                    <TextBlock Text="{Binding HasBledScore}"
                                               FontSize="32"
                                               FontWeight="Bold"
                                               Foreground="{DynamicResource PrimaryBrush}"
                                               Margin="0,5,0,0"/>
                                    <TextBlock Text="{Binding RischioEmorragico, StringFormat='Rischio: {0}'}"
                                               FontSize="12"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="1"
                                    Padding="15"
                                    Margin="0,0,10,0"
                                    BorderBrush="{DynamicResource BorderBrush}"
                                    BorderThickness="1">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="{DynamicResource SuccessBackgroundBrush}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsDoacContraindicato}" Value="True">
                                                <Setter Property="Background" Value="{DynamicResource DangerBackgroundBrush}"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsDoacSconsigliato}" Value="True">
                                                <Setter Property="Background" Value="{DynamicResource WarningBackgroundBrush}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <StackPanel>
                                    <TextBlock Text="Dosaggio Suggerito"
                                               FontWeight="Bold"
                                               FontSize="14">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="{DynamicResource SuccessBrush}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsDoacContraindicato}" Value="True">
                                                        <Setter Property="Foreground" Value="{DynamicResource DangerBrush}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsDoacSconsigliato}" Value="True">
                                                        <Setter Property="Foreground" Value="{DynamicResource WarningBrush}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock Text="{Binding DosaggioSuggerito, FallbackValue='Calcolare'}"
                                               FontSize="18"
                                               FontWeight="Bold"
                                               Margin="0,5,0,0"
                                               TextWrapping="Wrap">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="{DynamicResource SuccessBrush}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsDoacContraindicato}" Value="True">
                                                        <Setter Property="Foreground" Value="{DynamicResource DangerBrush}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsDoacSconsigliato}" Value="True">
                                                        <Setter Property="Foreground" Value="{DynamicResource WarningBrush}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="2"
                                    Background="{DynamicResource WarningBackgroundBrush}"
                                    Padding="15"
                                    BorderBrush="{DynamicResource BorderBrush}"
                                    BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="Prossimo Controllo"
                                               FontWeight="Bold"
                                               FontSize="14"
                                               Foreground="{DynamicResource WarningBrush}"/>
                                    <TextBlock Text="{Binding DataProssimoControllo, StringFormat='dd/MM/yyyy', FallbackValue='Da calcolare'}"
                                               FontSize="18"
                                               FontWeight="Bold"
                                               Foreground="{DynamicResource WarningBrush}"
                                               Margin="0,5,0,0"/>
                                    <TextBlock Text="{Binding MotivazioneIntervallo}"
                                               FontSize="12"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               TextWrapping="Wrap"
                                               Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <!-- Motivazioni Intervallo Controllo -->
                        <Border Background="{DynamicResource InfoBackgroundBrush}"
                                Padding="10"
                                Margin="0,10,0,0"
                                CornerRadius="5"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1"
                                Visibility="{Binding MotivazioniIntervallo.Count, Converter={StaticResource CountToVisibilityInverseConverter}}">
                            <StackPanel>
                                <TextBlock Text="Motivazioni intervallo controllo:"
                                           FontWeight="SemiBold"
                                           FontSize="12"
                                           Foreground="{DynamicResource PrimaryBrush}"
                                           Margin="0,0,0,5"/>
                                <ItemsControl ItemsSource="{Binding MotivazioniIntervallo}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Foreground="{DynamicResource TextSecondaryBrush}"
                                                       FontSize="11"
                                                       Margin="10,2,0,0">
                                                <Run Text="â€¢ "/>
                                                <Run Text="{Binding Mode=OneWay}"/>
                                            </TextBlock>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>

                        <Border Background="{DynamicResource CardBackgroundBrush}"
                                Padding="15"
                                Margin="0,15,0,0"
                                CornerRadius="5"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Razionale Clinico"
                                           FontWeight="Bold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           Margin="0,0,0,10"/>
                                <TextBlock Text="{Binding RazionaleDosaggio, FallbackValue='Eseguire il calcolo del dosaggio per visualizzare il razionale clinico.'}"
                                           TextWrapping="Wrap"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           LineHeight="22"/>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </GroupBox>

                <!-- Storico Rilevazioni -->
                <GroupBox Header="ðŸ“œ Storico Rilevazioni">
                    <DataGrid ItemsSource="{Binding Storico}"
                              SelectedItem="{Binding SelectedRecord}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              MaxHeight="300"
                              AlternatingRowBackground="{DynamicResource DataGridAlternateRowBrush}"
                              Background="{DynamicResource CardBackgroundBrush}"
                              Foreground="{DynamicResource TextPrimaryBrush}"
                              BorderBrush="{DynamicResource BorderBrush}">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="{DynamicResource DataGridHeaderBrush}" />
                                <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
                                <Setter Property="FontWeight" Value="SemiBold" />
                                <Setter Property="Padding" Value="12,10" />
                                <Setter Property="BorderThickness" Value="0,0,1,1" />
                                <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Data" Binding="{Binding DataRilevazione, StringFormat='dd/MM/yyyy'}" Width="100"/>
                            <DataGridTextColumn Header="DOAC" Binding="{Binding DoacSelezionato}" Width="120"/>
                            <DataGridTextColumn Header="Dosaggio" Binding="{Binding DosaggioSuggerito}" Width="150"/>
                            <DataGridTextColumn Header="CrCl" Binding="{Binding CrCl_Cockroft}" Width="80"/>
                            <DataGridTextColumn Header="HAS-BLED" Binding="{Binding HasBledScore}" Width="90"/>
                            <DataGridTextColumn Header="Prossimo Controllo" Binding="{Binding DataProssimoControllo, StringFormat='dd/MM/yyyy'}" Width="140"/>
                            <DataGridTemplateColumn Header="Azioni" Width="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="ðŸ‘ï¸"
                                                    Command="{Binding DataContext.MostraDettaglioStoricoCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    Padding="5"
                                                    Margin="2"/>
                                            <Button Content="ðŸ—‘ï¸"
                                                    Command="{Binding DataContext.EliminaRilevazioneCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    Background="{DynamicResource DangerBrush}"
                                                    Padding="5"
                                                    Margin="2">
                                                <Button.Style>
                                                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="{DynamicResource DangerHoverBrush}"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>

            </StackPanel>
        </ScrollViewer>

        <!-- Loading Overlay -->
        <Border Background="#80000000"
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                Panel.ZIndex="999">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="4"/>
                <TextBlock Text="Caricamento..."
                           Foreground="{DynamicResource TextOnPrimaryBrush}"
                           FontSize="16"
                           Margin="0,10,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
