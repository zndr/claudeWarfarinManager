<UserControl x:Class="WarfarinManager.UI.Views.Patient.MedicationsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:WarfarinManager.UI.ViewModels"
             xmlns:converters="clr-namespace:WarfarinManager.UI.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900"
             d:DataContext="{d:DesignInstance Type=vm:MedicationsViewModel}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        <converters:CountGreaterThanZeroToVisibilityConverter x:Key="CountGreaterThanZeroToVisibilityConverter"/>
        
        <!-- Stile pulsante standard -->
        <Style x:Key="StandardButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" 
                Background="{DynamicResource ToolbarBackgroundBrush}" 
                Padding="20,15"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Pulsanti azione -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Content="➕ Aggiungi Farmaco"
                            Command="{Binding StartAddMedicationCommand}"
                            Background="{DynamicResource SuccessBrush}"
                            Foreground="{DynamicResource TextOnPrimaryBrush}"
                            Style="{StaticResource StandardButtonStyle}"
                            Margin="0,0,10,0"
                            Visibility="{Binding IsAddingMedication, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>

                    <Button Content="⏹ Sospendi"
                            Command="{Binding SuspendMedicationCommand}"
                            Background="{DynamicResource DangerBrush}"
                            Foreground="{DynamicResource TextOnPrimaryBrush}"
                            Style="{StaticResource StandardButtonStyle}"
                            Margin="0,0,10,0"
                            Visibility="{Binding IsAddingMedication, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>

                    <Button Content="▶ Riattiva"
                            Command="{Binding ReactivateMedicationCommand}"
                            Background="{DynamicResource PrimaryBrush}"
                            Foreground="{DynamicResource TextOnPrimaryBrush}"
                            Style="{StaticResource StandardButtonStyle}"
                            Margin="0,0,10,0"
                            Visibility="{Binding IsAddingMedication, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>

                    <Button Content="🔍 Dettagli Interazione"
                            Command="{Binding ShowInteractionDetailsCommand}"
                            Background="#5C2D91"
                            Foreground="{DynamicResource TextOnPrimaryBrush}"
                            Style="{StaticResource StandardButtonStyle}"
                            Visibility="{Binding IsAddingMedication, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                </StackPanel>

                <!-- Statistiche -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center"
                            Visibility="{Binding IsAddingMedication, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                    <Border Background="{DynamicResource CardBackgroundBrush}" CornerRadius="4" Padding="12,6" Margin="5,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="💊 Totale: " FontWeight="SemiBold" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding TotalMedications}" FontWeight="Bold" Foreground="{DynamicResource PrimaryBrush}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#FFEBEE" CornerRadius="4" Padding="12,6" Margin="5,0"
                            Visibility="{Binding HighRiskCount, Converter={StaticResource CountGreaterThanZeroToVisibilityConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⚠️ Alto Rischio: " FontWeight="SemiBold" Foreground="#C62828" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding HighRiskCount}" FontWeight="Bold" Foreground="#C62828" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#FFF3E0" CornerRadius="4" Padding="12,6" Margin="5,0"
                            Visibility="{Binding ModerateRiskCount, Converter={StaticResource CountGreaterThanZeroToVisibilityConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⚡ Moderato: " FontWeight="SemiBold" Foreground="#E65100" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding ModerateRiskCount}" FontWeight="Bold" Foreground="#E65100" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Filtro solo attivi -->
                <CheckBox Grid.Column="2" 
                          Content="Mostra solo farmaci attivi"
                          IsChecked="{Binding ShowOnlyActive}"
                          VerticalAlignment="Center"
                          FontSize="13"
                          Visibility="{Binding IsAddingMedication, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
            </Grid>
        </Border>

        <!-- Form aggiunta farmaco -->
        <Border Grid.Row="1" 
                Background="#E3F2FD" 
                Padding="20,15"
                BorderBrush="#90CAF9"
                BorderThickness="0,0,0,1"
                Visibility="{Binding IsAddingMedication, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header form -->
                <TextBlock Grid.Row="0" 
                           Text="NUOVO FARMACO" 
                           FontSize="14" 
                           FontWeight="SemiBold" 
                           Foreground="#1565C0"
                           Margin="0,0,0,15"/>

                <!-- Campi form -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Nome farmaco con autocomplete -->
                    <StackPanel Grid.Column="0" Margin="0,0,15,0">
                        <TextBlock Text="Nome Farmaco *" FontWeight="SemiBold" FontSize="12" Margin="0,0,0,4"/>
                        <TextBox x:Name="MedicationNameTextBox"
                                 Text="{Binding NewMedicationName, UpdateSourceTrigger=PropertyChanged}"
                                 Padding="10,8"
                                 FontSize="13">
                            <TextBox.InputBindings>
                                <KeyBinding Key="Return" Command="{Binding SearchMedicationsCommand}"/>
                            </TextBox.InputBindings>
                        </TextBox>
                        
                        <!-- Lista suggerimenti -->
                        <Popup IsOpen="{Binding ShowSuggestions}"
                               PlacementTarget="{Binding ElementName=MedicationNameTextBox}"
                               Placement="Bottom"
                               StaysOpen="False"
                               AllowsTransparency="True">
                            <Border Background="{DynamicResource CardBackgroundBrush}" 
                                    BorderBrush="{DynamicResource BorderBrush}" 
                                    BorderThickness="1"
                                    MaxHeight="200">
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <ItemsControl ItemsSource="{Binding MedicationSuggestions}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Padding="10,6" 
                                                        Background="Transparent"
                                                        Cursor="Hand">
                                                    <Border.InputBindings>
                                                        <MouseBinding MouseAction="LeftClick" 
                                                                      Command="{Binding DataContext.SelectSuggestionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                      CommandParameter="{Binding}"/>
                                                    </Border.InputBindings>
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="{DynamicResource DataGridSelectedBrush}"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <TextBlock Text="{Binding}" FontSize="13"/>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </Border>
                        </Popup>
                    </StackPanel>

                    <!-- Dosaggio -->
                    <StackPanel Grid.Column="1" Margin="0,0,15,0" Width="150">
                        <TextBlock Text="Dosaggio" FontWeight="SemiBold" FontSize="12" Margin="0,0,0,4"/>
                        <TextBox Text="{Binding NewDosage, UpdateSourceTrigger=PropertyChanged}"
                                 Padding="10,8"
                                 FontSize="13"/>
                    </StackPanel>

                    <!-- Frequenza -->
                    <StackPanel Grid.Column="2" Margin="0,0,15,0" Width="150">
                        <TextBlock Text="Frequenza" FontWeight="SemiBold" FontSize="12" Margin="0,0,0,4"/>
                        <ComboBox SelectedValue="{Binding NewFrequency}"
                                  SelectedValuePath="Content"
                                  Padding="10,8"
                                  FontSize="13"
                                  IsEditable="True">
                            <ComboBoxItem Content="1 volta/die"/>
                            <ComboBoxItem Content="2 volte/die"/>
                            <ComboBoxItem Content="3 volte/die"/>
                            <ComboBoxItem Content="A giorni alterni"/>
                            <ComboBoxItem Content="Al bisogno"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Data inizio -->
                    <StackPanel Grid.Column="3" Margin="0,0,15,0" Width="140">
                        <TextBlock Text="Data Inizio" FontWeight="SemiBold" FontSize="12" Margin="0,0,0,4"/>
                        <DatePicker SelectedDate="{Binding NewStartDate}"
                                    Padding="10,8"
                                    FontSize="13"/>
                    </StackPanel>

                    <!-- Pulsanti -->
                    <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Bottom">
                        <Button Content="💾 Salva"
                                Command="{Binding SaveMedicationCommand}"
                                Background="{DynamicResource SuccessBrush}"
                                Foreground="{DynamicResource TextOnPrimaryBrush}"
                                Style="{StaticResource StandardButtonStyle}"
                                Margin="0,0,10,0"/>
                        <Button Content="✕ Annulla"
                                Command="{Binding CancelAddMedicationCommand}"
                                Background="#757575"
                                Foreground="{DynamicResource TextOnPrimaryBrush}"
                                Style="{StaticResource StandardButtonStyle}"/>
                    </StackPanel>
                </Grid>

                <!-- Alert interazione -->
                <Border Grid.Row="2" 
                        Background="{Binding InteractionAlertColor}"
                        CornerRadius="4"
                        Padding="15,10"
                        Margin="0,15,0,0"
                        Visibility="{Binding HasInteractionAlert, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="{Binding InteractionAlertMessage}"
                               TextWrapping="Wrap"
                               FontSize="13"/>
                </Border>
            </Grid>
        </Border>

        <!-- Lista farmaci -->
        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding Medications}"
                  SelectedItem="{Binding SelectedMedication}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  RowHeight="55"
                  FontSize="13"
                  AlternatingRowBackground="#F9F9F9"
                  CanUserResizeRows="False"
                  CanUserSortColumns="True"
                  Visibility="{Binding IsLoading, Converter={StaticResource InverseBoolToVisibilityConverter}}">

            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="{DynamicResource DataGridHeaderBrush}"/>
                    <Setter Property="Foreground" Value="#333333"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Padding" Value="12,10"/>
                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                    <Setter Property="BorderBrush" Value="#D0D0D0"/>
                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="Padding" Value="12,0"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="DataGridCell">
                                <Border Padding="{TemplateBinding Padding}"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center" TextElement.Foreground="{TemplateBinding Foreground}"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="{DynamicResource DataGridSelectedBrush}"/>
                            <Setter Property="Foreground" Value="{DynamicResource DataGridSelectedTextBrush}"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.CellStyle>

            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="{DynamicResource DataGridRowBrush}" />
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{DynamicResource DataGridHoverBrush}" />
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="{DynamicResource DataGridSelectedBrush}" />
                        </Trigger>
                        <DataTrigger Binding="{Binding IsActive}" Value="False">
                            <Setter Property="Opacity" Value="0.6"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.Columns>
                <!-- Indicatore Interazione -->
                <DataGridTemplateColumn Header="Rischio" Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border Background="{Binding InteractionColor}" 
                                    CornerRadius="3" 
                                    Padding="6,4"
                                    HorizontalAlignment="Center">
                                <TextBlock Text="{Binding InteractionIcon}" 
                                           FontSize="14"
                                           HorizontalAlignment="Center"/>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Nome Farmaco -->
                <DataGridTemplateColumn Header="Farmaco" Width="*" MinWidth="200">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="{Binding MedicationName}" 
                                           FontWeight="SemiBold"
                                           FontSize="13"/>
                                <TextBlock Text="{Binding InteractionLevelDescription}" 
                                           FontSize="11"
                                           Foreground="{Binding InteractionColor}"
                                           Visibility="{Binding HasInteraction, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Dosaggio -->
                <DataGridTextColumn Header="Dosaggio" 
                                    Binding="{Binding DosageDescription}"
                                    Width="150"/>

                <!-- Stato -->
                <DataGridTemplateColumn Header="Stato" Width="90">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border CornerRadius="3" 
                                    Padding="8,4"
                                    HorizontalAlignment="Center">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                <Setter Property="Background" Value="#E8F5E9"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                <Setter Property="Background" Value="#FFEBEE"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <TextBlock Text="{Binding Status}" 
                                           FontSize="11" 
                                           FontWeight="SemiBold">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                    <Setter Property="Foreground" Value="#2E7D32"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                    <Setter Property="Foreground" Value="#C62828"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Periodo -->
                <DataGridTextColumn Header="Periodo" 
                                    Binding="{Binding Period}"
                                    Width="200"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Messaggio lista vuota -->
        <StackPanel Grid.Row="2"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <StackPanel.Style>
                <Style TargetType="StackPanel">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Medications.Count}" Value="0">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </StackPanel.Style>
            <TextBlock Text="💊 Nessun farmaco registrato"
                       FontSize="16"
                       Foreground="{DynamicResource TextTertiaryBrush}"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>
            <TextBlock Text="Clicca su 'Aggiungi Farmaco' per registrare una terapia concomitante"
                       FontSize="13"
                       Foreground="{DynamicResource TextTertiaryBrush}"
                       HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Loading overlay -->
        <Grid Grid.RowSpan="3" 
              Background="#80FFFFFF"
              Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="⏳ Caricamento farmaci..."
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource PrimaryBrush}"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
