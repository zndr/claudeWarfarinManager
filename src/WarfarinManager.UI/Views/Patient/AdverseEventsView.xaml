<UserControl x:Class="WarfarinManager.UI.Views.Patient.AdverseEventsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:WarfarinManager.UI.ViewModels"
             xmlns:converters="clr-namespace:WarfarinManager.UI.Converters"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1000"
             d:DataContext="{d:DesignInstance Type=vm:AdverseEventsViewModel}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        <converters:AdverseReactionTypeConverter x:Key="AdverseReactionTypeConverter"/>
        <converters:CertaintyLevelConverter x:Key="CertaintyLevelConverter"/>
        <converters:SeverityToColorConverter x:Key="SeverityToColorConverter"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Toolbar -->
        <Border Grid.Row="0"
                Background="{DynamicResource ToolbarBackgroundBrush}"
                Padding="20,15"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Content="➕ Nuovo Evento Avverso"
                            Command="{Binding CancelEditCommand}"
                            Background="{DynamicResource SuccessBrush}"
                            Foreground="{DynamicResource TextOnPrimaryBrush}"
                            Padding="15,8"
                            BorderThickness="0"
                            FontWeight="SemiBold"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Border Background="{DynamicResource CardBackgroundBrush}" CornerRadius="4" Padding="12,6">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📋 Totale Eventi: " FontWeight="SemiBold" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding AdverseEvents.Count}" FontWeight="Bold" Foreground="{DynamicResource PrimaryBrush}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Form per nuovo/modifica evento -->
        <Border Grid.Row="1"
                Background="#FFFEF5"
                Padding="20"
                BorderBrush="#FFE082"
                BorderThickness="0,0,0,1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <TextBlock Grid.Row="0"
                           Text="{Binding IsEditMode, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue='NUOVO EVENTO AVVERSO'}"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="#F57C00"
                           Margin="0,0,0,15"/>

                <!-- Campi form -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Data comparsa -->
                    <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,10,15">
                        <TextBlock Text="Data comparsa reazione *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <DatePicker SelectedDate="{Binding OnsetDate, Mode=TwoWay}" />
                    </StackPanel>

                    <!-- Tipo reazione -->
                    <StackPanel Grid.Column="1" Grid.Row="0" Margin="0,0,10,15">
                        <TextBlock Text="Tipo di reazione *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0"
                                     Text="{Binding SelectedReactionType, Mode=OneWay, Converter={StaticResource AdverseReactionTypeConverter}}"
                                     IsReadOnly="True"
                                     Background="{DynamicResource ToolbarBackgroundBrush}"/>
                            <Button Grid.Column="1"
                                    Content="Seleziona..."
                                    Command="{Binding SelectReactionTypeCommand}"
                                    Background="{DynamicResource PrimaryBrush}"
                                    Foreground="{DynamicResource TextOnPrimaryBrush}"
                                    Padding="12,6"
                                    Margin="5,0,0,0"
                                    BorderThickness="0"
                                    Cursor="Hand">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                    </StackPanel>

                    <!-- Grado di certezza -->
                    <StackPanel Grid.Column="2" Grid.Row="0" Margin="0,0,0,15">
                        <TextBlock Text="Grado di certezza *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <ComboBox SelectedValue="{Binding SelectedCertaintyLevel, Mode=TwoWay}"
                                  SelectedValuePath="Tag">
                            <ComboBoxItem Content="Sicura" Tag="Certain" IsSelected="True"/>
                            <ComboBoxItem Content="Dubbia" Tag="Doubtful"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- INR al momento dell'evento -->
                    <StackPanel Grid.Column="0" Grid.Row="1" Margin="0,0,10,15">
                        <TextBlock Text="INR al momento dell'evento" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding InrAtEvent, Mode=TwoWay, StringFormat=N2}" />
                    </StackPanel>

                    <!-- Provvedimenti adottati -->
                    <StackPanel Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="3" Margin="0,0,0,15">
                        <TextBlock Text="Provvedimenti adottati" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding MeasuresTaken, Mode=TwoWay}"
                                 Height="60"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"/>
                    </StackPanel>

                    <!-- Note -->
                    <StackPanel Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="3" Margin="0,0,0,0">
                        <TextBlock Text="Note aggiuntive" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding Notes, Mode=TwoWay}"
                                 Height="60"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"/>
                    </StackPanel>
                </Grid>

                <!-- Pulsanti azione -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                    <Button Content="💾 Salva"
                            Command="{Binding SaveEventCommand}"
                            Background="{DynamicResource SuccessBrush}"
                            Foreground="{DynamicResource TextOnPrimaryBrush}"
                            Padding="15,8"
                            Margin="0,0,10,0"
                            BorderThickness="0"
                            FontWeight="SemiBold"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Content="❌ Annulla"
                            Command="{Binding CancelEditCommand}"
                            Background="#6C757D"
                            Foreground="{DynamicResource TextOnPrimaryBrush}"
                            Padding="15,8"
                            BorderThickness="0"
                            FontWeight="SemiBold"
                            Cursor="Hand"
                            Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Lista eventi avversi -->
        <Border Grid.Row="2" Background="{DynamicResource CardBackgroundBrush}" Padding="20">
            <Grid>
                <!-- Messaggio quando non ci sono eventi -->
                <Border Visibility="{Binding AdverseEvents.Count, Converter={StaticResource CountToVisibilityConverter}}"
                        Background="#F9F9F9"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="40"
                        VerticalAlignment="Center">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="📋" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                        <TextBlock Text="Nessun evento avverso registrato"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="Clicca su 'Nuovo Evento Avverso' per iniziare"
                                   FontSize="13"
                                   Foreground="{DynamicResource TextTertiaryBrush}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- DataGrid -->
                <DataGrid ItemsSource="{Binding AdverseEvents}"
                          SelectedItem="{Binding SelectedEvent}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          RowHeight="45"
                          AlternatingRowBackground="{DynamicResource ContentBackgroundBrush}"
                          BorderThickness="1"
                          BorderBrush="{DynamicResource BorderBrush}"
                          MinHeight="200"
                          Visibility="{Binding AdverseEvents.Count, Converter={StaticResource CountToVisibilityInverseConverter}}">

                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="FontSize" Value="13"/>
                        <Setter Property="Padding" Value="12,10"/>
                        <Setter Property="BorderThickness" Value="0,0,1,0"/>
                        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryPressedBrush}"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="White"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource DataGridSelectedBrush}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#BBDEFB"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>

                <DataGrid.Columns>
                    <!-- Data -->
                    <DataGridTextColumn Header="Data" Binding="{Binding OnsetDate, StringFormat=dd/MM/yyyy}" Width="110">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Tipo reazione con descrizione -->
                    <DataGridTextColumn Header="Reazione" Binding="{Binding ReactionType, Converter={StaticResource AdverseReactionTypeConverter}}" Width="*" MinWidth="220">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="TextWrapping" Value="NoWrap"/>
                                <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Gravità con colore -->
                    <DataGridTemplateColumn Header="Gravità" Width="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border Background="{Binding Severity, Converter={StaticResource SeverityToColorConverter}}"
                                        CornerRadius="3"
                                        Padding="8,4"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Severity}"
                                               Foreground="{DynamicResource TextOnPrimaryBrush}"
                                               FontWeight="SemiBold"
                                               FontSize="11"
                                               TextAlignment="Center"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Certezza -->
                    <DataGridTextColumn Header="Certezza" Binding="{Binding CertaintyLevel, Converter={StaticResource CertaintyLevelConverter}}" Width="90">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- INR -->
                    <DataGridTextColumn Header="INR" Binding="{Binding INRAtEvent, StringFormat=N2}" Width="70">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Provvedimenti adottati -->
                    <DataGridTextColumn Header="Provvedimenti" Binding="{Binding MeasuresTaken}" Width="*" MinWidth="200">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="TextWrapping" Value="NoWrap"/>
                                <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                <Setter Property="FontSize" Value="12"/>
                                <Setter Property="ToolTip" Value="{Binding MeasuresTaken}"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Azioni -->
                    <DataGridTemplateColumn Header="Azioni" Width="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="✏️"
                                            Command="{Binding DataContext.EditEventCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"
                                            Background="#FFC107"
                                            Foreground="{DynamicResource TextOnPrimaryBrush}"
                                            Padding="8,4"
                                            Margin="2"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            ToolTip="Modifica">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="3" Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>

                                    <Button Content="🗑️"
                                            Command="{Binding DataContext.DeleteEventCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"
                                            Background="{DynamicResource DangerBrush}"
                                            Foreground="{DynamicResource TextOnPrimaryBrush}"
                                            Padding="8,4"
                                            Margin="2"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            ToolTip="Elimina">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="3" Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            </Grid>
        </Border>

        <!-- Loading overlay -->
        <Grid Grid.RowSpan="3"
              Background="#80000000"
              Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="4" Foreground="{DynamicResource PrimaryBrush}"/>
                <TextBlock Text="Caricamento..." Foreground="{DynamicResource TextOnPrimaryBrush}" FontSize="14" Margin="0,10,0,0" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>
