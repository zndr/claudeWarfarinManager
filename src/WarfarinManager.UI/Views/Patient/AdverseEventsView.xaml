<UserControl x:Class="WarfarinManager.UI.Views.Patient.AdverseEventsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:WarfarinManager.UI.ViewModels"
             xmlns:converters="clr-namespace:WarfarinManager.UI.Converters"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1000"
             d:DataContext="{d:DesignInstance Type=vm:AdverseEventsViewModel}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0"
                Background="#F5F5F5"
                Padding="20,15"
                BorderBrush="#E0E0E0"
                BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Content="âž• Nuovo Evento Avverso"
                            Command="{Binding CancelEditCommand}"
                            Background="#107C10"
                            Foreground="White"
                            Padding="15,8"
                            BorderThickness="0"
                            FontWeight="SemiBold"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Border Background="White" CornerRadius="4" Padding="12,6">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“‹ Totale Eventi: " FontWeight="SemiBold" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding AdverseEvents.Count}" FontWeight="Bold" Foreground="#0078D4" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Form per nuovo/modifica evento -->
        <Border Grid.Row="1"
                Background="#FFFEF5"
                Padding="20"
                BorderBrush="#FFE082"
                BorderThickness="0,0,0,1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <TextBlock Grid.Row="0"
                           Text="{Binding IsEditMode, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue='NUOVO EVENTO AVVERSO'}"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="#F57C00"
                           Margin="0,0,0,15"/>

                <!-- Campi form -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Data comparsa -->
                    <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,10,15">
                        <TextBlock Text="Data comparsa reazione *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <DatePicker SelectedDate="{Binding OnsetDate, Mode=TwoWay}" />
                    </StackPanel>

                    <!-- Tipo reazione -->
                    <StackPanel Grid.Column="1" Grid.Row="0" Margin="0,0,10,15">
                        <TextBlock Text="Tipo di reazione *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0"
                                     Text="{Binding SelectedReactionType, Mode=OneWay}"
                                     IsReadOnly="True"
                                     Background="#F5F5F5"/>
                            <Button Grid.Column="1"
                                    Content="Seleziona..."
                                    Command="{Binding SelectReactionTypeCommand}"
                                    Background="#0078D4"
                                    Foreground="White"
                                    Padding="12,6"
                                    Margin="5,0,0,0"
                                    BorderThickness="0"
                                    Cursor="Hand">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                    </StackPanel>

                    <!-- Grado di certezza -->
                    <StackPanel Grid.Column="2" Grid.Row="0" Margin="0,0,0,15">
                        <TextBlock Text="Grado di certezza *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <ComboBox SelectedValue="{Binding SelectedCertaintyLevel, Mode=TwoWay}"
                                  SelectedValuePath="Tag">
                            <ComboBoxItem Content="Sicura" Tag="Certain" IsSelected="True"/>
                            <ComboBoxItem Content="Dubbia" Tag="Doubtful"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- INR al momento dell'evento -->
                    <StackPanel Grid.Column="0" Grid.Row="1" Margin="0,0,10,15">
                        <TextBlock Text="INR al momento dell'evento" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding InrAtEvent, Mode=TwoWay, StringFormat=N2}" />
                    </StackPanel>

                    <!-- Provvedimenti adottati -->
                    <StackPanel Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="3" Margin="0,0,0,15">
                        <TextBlock Text="Provvedimenti adottati" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding MeasuresTaken, Mode=TwoWay}"
                                 Height="60"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"/>
                    </StackPanel>

                    <!-- Note -->
                    <StackPanel Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="3" Margin="0,0,0,0">
                        <TextBlock Text="Note aggiuntive" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding Notes, Mode=TwoWay}"
                                 Height="60"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"/>
                    </StackPanel>
                </Grid>

                <!-- Pulsanti azione -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                    <Button Content="ðŸ’¾ Salva"
                            Command="{Binding SaveEventCommand}"
                            Background="#107C10"
                            Foreground="White"
                            Padding="15,8"
                            Margin="0,0,10,0"
                            BorderThickness="0"
                            FontWeight="SemiBold"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Content="âŒ Annulla"
                            Command="{Binding CancelEditCommand}"
                            Background="#6C757D"
                            Foreground="White"
                            Padding="15,8"
                            BorderThickness="0"
                            FontWeight="SemiBold"
                            Cursor="Hand"
                            Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Lista eventi avversi -->
        <Border Grid.Row="2" Background="White" Padding="20">
            <DataGrid ItemsSource="{Binding AdverseEvents}"
                      SelectedItem="{Binding SelectedEvent}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      GridLinesVisibility="Horizontal"
                      HeadersVisibility="Column"
                      RowHeight="40"
                      AlternatingRowBackground="#F9F9F9">

                <DataGrid.Columns>
                    <!-- Data -->
                    <DataGridTextColumn Header="Data" Binding="{Binding OnsetDate, StringFormat=dd/MM/yyyy}" Width="100"/>

                    <!-- Tipo reazione -->
                    <DataGridTextColumn Header="Reazione" Binding="{Binding ReactionType}" Width="*" MinWidth="200"/>

                    <!-- GravitÃ  con colore -->
                    <DataGridTemplateColumn Header="GravitÃ " Width="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border Background="{Binding Severity, Converter={StaticResource SeverityToColorConverter}}"
                                        CornerRadius="3"
                                        Padding="6,3">
                                    <TextBlock Text="{Binding Severity}"
                                               Foreground="White"
                                               FontWeight="SemiBold"
                                               TextAlignment="Center"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Certezza -->
                    <DataGridTextColumn Header="Certezza" Binding="{Binding CertaintyLevel}" Width="100"/>

                    <!-- INR -->
                    <DataGridTextColumn Header="INR" Binding="{Binding INRAtEvent, StringFormat=N2}" Width="80"/>

                    <!-- Azioni -->
                    <DataGridTemplateColumn Header="Azioni" Width="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="âœï¸"
                                            Command="{Binding DataContext.EditEventCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"
                                            Background="#FFC107"
                                            Foreground="White"
                                            Padding="8,4"
                                            Margin="2"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            ToolTip="Modifica">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="3" Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>

                                    <Button Content="ðŸ—‘ï¸"
                                            Command="{Binding DataContext.DeleteEventCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"
                                            Background="#D13438"
                                            Foreground="White"
                                            Padding="8,4"
                                            Margin="2"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            ToolTip="Elimina">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="3" Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Loading overlay -->
        <Grid Grid.RowSpan="3"
              Background="#80000000"
              Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="4" Foreground="#0078D4"/>
                <TextBlock Text="Caricamento..." Foreground="White" FontSize="14" Margin="0,10,0,0" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
