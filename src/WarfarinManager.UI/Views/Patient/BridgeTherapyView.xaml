<UserControl x:Class="WarfarinManager.UI.Views.Patient.BridgeTherapyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:WarfarinManager.UI.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000"
             d:DataContext="{d:DesignInstance Type=vm:BridgeTherapyViewModel}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <!-- Stile per i bordi delle sezioni -->
        <Style x:Key="SectionBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
        
        <!-- Stile per i titoli delle sezioni -->
        <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#0078D4"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
        
        <!-- Stile per le etichette -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="#F5F5F5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Colonna Sinistra: Input -->
        <ScrollViewer Grid.Column="0" 
                      VerticalScrollBarVisibility="Auto"
                      Padding="20">
            <StackPanel>
                
                <!-- Sezione: Informazioni Intervento -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="ðŸ“… INFORMAZIONI INTERVENTO" 
                                   Style="{StaticResource SectionTitleStyle}"/>
                        
                        <!-- Data Intervento -->
                        <TextBlock Text="Data intervento programmato:" 
                                   Style="{StaticResource LabelStyle}"/>
                        <DatePicker SelectedDate="{Binding SurgeryDate}"
                                    Margin="0,0,0,15"
                                    Width="200"
                                    HorizontalAlignment="Left"/>
                        
                        <!-- Tipo di Chirurgia -->
                        <TextBlock Text="Tipo di chirurgia:" 
                                   Style="{StaticResource LabelStyle}"/>
                        <ComboBox ItemsSource="{Binding SurgeryTypes}"
                                  SelectedValue="{Binding SelectedSurgeryType}"
                                  SelectedValuePath="Type"
                                  DisplayMemberPath="DisplayText"
                                  Margin="0,0,0,15"
                                  FontSize="13"
                                  Padding="10,8"/>
                        
                        <!-- Rischio Emorragico (calcolato) -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Rischio emorragico: " 
                                       FontWeight="SemiBold"
                                       FontSize="13"
                                       VerticalAlignment="Center"/>
                            <Border Padding="8,4" CornerRadius="4" Margin="5,0,0,0">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding BleedingRisk}" Value="Low">
                                                <Setter Property="Background" Value="#107C10"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding BleedingRisk}" Value="Moderate">
                                                <Setter Property="Background" Value="#FFB900"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding BleedingRisk}" Value="High">
                                                <Setter Property="Background" Value="#D13438"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <TextBlock Text="{Binding BleedingRisk}" 
                                           Foreground="White"
                                           FontWeight="SemiBold"
                                           FontSize="12"/>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Sezione: Valutazione Rischio TE -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="âš  VALUTAZIONE RISCHIO TROMBOEMBOLICO" 
                                   Style="{StaticResource SectionTitleStyle}"/>
                        
                        <!-- Protesi valvolare -->
                        <CheckBox Content="Paziente con protesi valvolare meccanica"
                                  IsChecked="{Binding HasMechanicalValve}"
                                  Margin="0,0,0,10"
                                  FontSize="13"/>
                        
                        <!-- Pregresso Stroke/TIA -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Pregresso Stroke/TIA:" 
                                       FontSize="13"
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,0"/>
                            <RadioButton Content="SÃ¬" 
                                         IsChecked="{Binding HadStrokeTIA, Converter={StaticResource BoolToVisibilityConverter}}"
                                         GroupName="StrokeTIA"
                                         Margin="0,0,15,0"/>
                            <RadioButton Content="No" 
                                         GroupName="StrokeTIA"
                                         Margin="0,0,15,0"/>
                            <RadioButton Content="Non noto" 
                                         GroupName="StrokeTIA"
                                         IsChecked="True"/>
                        </StackPanel>
                        
                        <!-- CHA2DS2-VASc -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="CHAâ‚‚DSâ‚‚-VASc Score: " 
                                       FontSize="13"
                                       VerticalAlignment="Center"/>
                            <Border Background="#0078D4" 
                                    CornerRadius="12"
                                    Padding="10,4"
                                    MinWidth="30">
                                <TextBlock Text="{Binding Cha2ds2vascScore}" 
                                           Foreground="White"
                                           FontWeight="Bold"
                                           FontSize="14"
                                           HorizontalAlignment="Center"/>
                            </Border>
                        </StackPanel>
                        
                        <!-- Override manuale -->
                        <CheckBox Content="Usa valutazione rischio manuale"
                                  IsChecked="{Binding UseManualRisk}"
                                  Margin="0,10,0,5"
                                  FontSize="13"/>
                        
                        <ComboBox IsEnabled="{Binding UseManualRisk}"
                                  SelectedValue="{Binding ManualTERisk}"
                                  Margin="0,0,0,10"
                                  Width="200"
                                  HorizontalAlignment="Left">
                            <ComboBoxItem Content="Basso rischio" Tag="Low"/>
                            <ComboBoxItem Content="Rischio moderato" Tag="Moderate"/>
                            <ComboBoxItem Content="Alto rischio" Tag="High"/>
                        </ComboBox>
                        
                        <!-- Rischio TE (calcolato) -->
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <TextBlock Text="Rischio tromboembolico: " 
                                       FontWeight="SemiBold"
                                       FontSize="13"
                                       VerticalAlignment="Center"/>
                            <Border Padding="8,4" CornerRadius="4" Margin="5,0,0,0">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ThromboembolicRisk}" Value="Low">
                                                <Setter Property="Background" Value="#107C10"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ThromboembolicRisk}" Value="Moderate">
                                                <Setter Property="Background" Value="#FFB900"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ThromboembolicRisk}" Value="High">
                                                <Setter Property="Background" Value="#D13438"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <TextBlock Text="{Binding ThromboembolicRisk}" 
                                           Foreground="White"
                                           FontWeight="SemiBold"
                                           FontSize="12"/>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Sezione: Linee Guida -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="ðŸ“š LINEE GUIDA" 
                                   Style="{StaticResource SectionTitleStyle}"/>
                        
                        <StackPanel Orientation="Horizontal">
                            <RadioButton Content="FCSA-SIMG (Italia)" 
                                         IsChecked="True"
                                         GroupName="Guideline"
                                         Margin="0,0,20,0"
                                         FontSize="13"/>
                            <RadioButton Content="ACCP/ACC (USA)" 
                                         GroupName="Guideline"
                                         FontSize="13"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Pulsante Calcola -->
                <Button Content="ðŸ”¬ CALCOLA PROTOCOLLO BRIDGE"
                        Command="{Binding CalculateBridgeCommand}"
                        Background="#0078D4"
                        Foreground="White"
                        FontSize="15"
                        FontWeight="Bold"
                        Padding="20,12"
                        Margin="0,5,0,0"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="6"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#005A9E"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <!-- Messaggio errore -->
                <TextBlock Text="{Binding ErrorMessage}"
                           Foreground="#D13438"
                           FontSize="13"
                           TextWrapping="Wrap"
                           Margin="0,10,0,0"
                           Visibility="{Binding ErrorMessage, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Colonna Destra: Risultati -->
        <ScrollViewer Grid.Column="1" 
                      VerticalScrollBarVisibility="Auto"
                      Padding="20"
                      Background="White">
            <StackPanel>
                
                <!-- Placeholder quando non c'Ã¨ risultato -->
                <StackPanel Visibility="{Binding HasResult, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Margin="0,100,0,0">
                    <TextBlock Text="ðŸ¥" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                    <TextBlock Text="Inserisci i dati dell'intervento"
                               FontSize="16"
                               Foreground="#A0A0A0"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="e clicca su 'Calcola Protocollo' per generare"
                               FontSize="14"
                               Foreground="#A0A0A0"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="le raccomandazioni bridge therapy"
                               FontSize="14"
                               Foreground="#A0A0A0"
                               HorizontalAlignment="Center"/>
                </StackPanel>
                
                <!-- Risultato -->
                <StackPanel Visibility="{Binding HasResult, Converter={StaticResource BoolToVisibilityConverter}}">
                    
                    <!-- Header Raccomandazione -->
                    <Border Padding="20" CornerRadius="8" Margin="0,0,0,20">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CurrentProtocol.BridgeRecommended}" Value="True">
                                        <Setter Property="Background" Value="#FFB900"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding CurrentProtocol.BridgeRecommended}" Value="False">
                                        <Setter Property="Background" Value="#107C10"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <StackPanel>
                            <TextBlock FontSize="20" 
                                       FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CurrentProtocol.BridgeRecommended}" Value="True">
                                                <Setter Property="Text" Value="âš  BRIDGE THERAPY RACCOMANDATO"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding CurrentProtocol.BridgeRecommended}" Value="False">
                                                <Setter Property="Text" Value="âœ“ BRIDGE THERAPY NON NECESSARIO"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBlock Text="{Binding FcsaRecommendation.Rationale}"
                                       Foreground="White"
                                       FontSize="13"
                                       TextWrapping="Wrap"
                                       HorizontalAlignment="Center"
                                       Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Timeline -->
                    <Border Style="{StaticResource SectionBorderStyle}" Background="#F9F9F9">
                        <StackPanel>
                            <TextBlock Text="ðŸ“‹ TIMELINE" 
                                       Style="{StaticResource SectionTitleStyle}"/>
                            
                            <!-- Pre-operatoria -->
                            <TextBlock Text="PRE-OPERATORIO" 
                                       FontWeight="Bold"
                                       FontSize="12"
                                       Foreground="#666666"
                                       Margin="0,0,0,10"/>
                            
                            <StackPanel Margin="10,0,0,15">
                                <TextBlock Margin="0,3">
                                    <Run Text="ðŸ“Œ Giorno -5: " FontWeight="SemiBold"/>
                                    <Run Text="STOP Warfarin"/>
                                </TextBlock>
                                <TextBlock Margin="0,3" 
                                           Visibility="{Binding CurrentProtocol.EBPMStartDate, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <Run Text="ðŸ’‰ Giorno -3: " FontWeight="SemiBold"/>
                                    <Run Text="Inizio EBPM"/>
                                </TextBlock>
                                <TextBlock Margin="0,3">
                                    <Run Text="ðŸ”¬ Giorno -1: " FontWeight="SemiBold"/>
                                    <Run Text="Controllo INR (target &lt;1.5)"/>
                                </TextBlock>
                                <TextBlock Margin="0,3" 
                                           Visibility="{Binding CurrentProtocol.EBPMLastDoseDate, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <Run Text="ðŸ’‰ Giorno -1: " FontWeight="SemiBold"/>
                                    <Run Text="Ultima dose EBPM (24h prima)"/>
                                </TextBlock>
                                <TextBlock Margin="0,3" FontWeight="Bold" Foreground="#D13438">
                                    <Run Text="ðŸ¥ Giorno 0: "/>
                                    <Run Text="*** INTERVENTO ***"/>
                                </TextBlock>
                            </StackPanel>
                            
                            <!-- Post-operatoria -->
                            <TextBlock Text="POST-OPERATORIO" 
                                       FontWeight="Bold"
                                       FontSize="12"
                                       Foreground="#666666"
                                       Margin="0,10,0,10"/>
                            
                            <StackPanel Margin="10,0,0,0">
                                <TextBlock Margin="0,3">
                                    <Run Text="ðŸ’Š Giorno 0: " FontWeight="SemiBold"/>
                                    <Run Text="Ripresa Warfarin (12-24h post)"/>
                                </TextBlock>
                                <TextBlock Margin="0,3" 
                                           Visibility="{Binding CurrentProtocol.EBPMResumeDate, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <Run Text="ðŸ’‰ Giorno +1-2: " FontWeight="SemiBold"/>
                                    <Run Text="Ripresa EBPM se emostasi OK"/>
                                </TextBlock>
                                <TextBlock Margin="0,3">
                                    <Run Text="ðŸ”¬ Giorno +5: " FontWeight="SemiBold"/>
                                    <Run Text="Controllo INR"/>
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- EBPM (se raccomandato) -->
                    <Border Style="{StaticResource SectionBorderStyle}" 
                            Background="#FFF8E1"
                            Visibility="{Binding CurrentProtocol.BridgeRecommended, Converter={StaticResource BoolToVisibilityConverter}}">
                        <StackPanel>
                            <TextBlock Text="ðŸ’‰ SCHEMA EBPM" 
                                       Style="{StaticResource SectionTitleStyle}"
                                       Foreground="#F57C00"/>
                            
                            <Grid Margin="0,5,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Farmaco:" FontWeight="SemiBold" Margin="0,3"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding CurrentProtocol.EBPMDrug}" Margin="10,3,0,3"/>
                                
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Dosaggio:" FontWeight="SemiBold" Margin="0,3"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding CurrentProtocol.EBPMDosage}" Margin="10,3,0,3"/>
                                
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Frequenza:" FontWeight="SemiBold" Margin="0,3"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding CurrentProtocol.EBPMFrequency}" Margin="10,3,0,3"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <!-- Warning -->
                    <ItemsControl ItemsSource="{Binding CurrentProtocol.Warnings}" Margin="0,0,0,15">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#FFEBEE" 
                                        BorderBrush="#FFCDD2" 
                                        BorderThickness="1"
                                        CornerRadius="4"
                                        Padding="10"
                                        Margin="0,5,0,0">
                                    <TextBlock Text="{Binding}" 
                                               Foreground="#C62828"
                                               FontSize="12"
                                               TextWrapping="Wrap"/>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    
                    <!-- Pulsanti Azione -->
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                Margin="0,20,0,0">
                        
                        <Button Content="ðŸ’¾ Salva Piano"
                                Command="{Binding SavePlanCommand}"
                                Background="#107C10"
                                Foreground="White"
                                FontWeight="SemiBold"
                                Padding="15,10"
                                Margin="0,0,10,0"
                                BorderThickness="0"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="4"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#0F6B0D"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        
                        <Button Content="ðŸ“‹ Copia"
                                Command="{Binding CopyToClipboardCommand}"
                                Background="#0078D4"
                                Foreground="White"
                                FontWeight="SemiBold"
                                Padding="15,10"
                                Margin="0,0,10,0"
                                BorderThickness="0"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="4"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#005A9E"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        
                        <Button Content="ðŸ“„ Esporta TXT"
                                Command="{Binding ExportToFileCommand}"
                                Background="#6C757D"
                                Foreground="White"
                                FontWeight="SemiBold"
                                Padding="15,10"
                                BorderThickness="0"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="4"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#5A6268"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Loading Overlay -->
        <Grid Grid.ColumnSpan="2" 
              Background="#80FFFFFF"
              Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="â³ Elaborazione in corso..."
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="#0078D4"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
