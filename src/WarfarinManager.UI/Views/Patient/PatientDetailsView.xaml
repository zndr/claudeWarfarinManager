<UserControl
    x:Class="WarfarinManager.UI.Views.Patient.PatientDetailsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:WarfarinManager.UI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WarfarinManager.UI.Views.Patient"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:WarfarinManager.UI.ViewModels"
    d:DataContext="{d:DesignInstance Type=vm:PatientDetailsViewModel}"
    d:DesignHeight="700"
    d:DesignWidth="1000"
    mc:Ignorable="d">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Header con info paziente  -->
        <Border
            Grid.Row="0"
            Padding="20,15"
            Background="{DynamicResource PrimaryBrush}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  Pulsante Indietro  -->
                <Button
                    Grid.Column="0"
                    Margin="0,0,20,0"
                    Padding="10,8"
                    Background="Transparent"
                    BorderThickness="0"
                    Command="{Binding GoBackCommand}"
                    Content="â—„ Torna alla Lista"
                    Cursor="Hand"
                    FontSize="13"
                    Foreground="{DynamicResource TextOnPrimaryBrush}">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource PrimaryPressedBrush}" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!--  Info Paziente  -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock
                        FontSize="20"
                        FontWeight="SemiBold"
                        Foreground="{DynamicResource TextOnPrimaryBrush}"
                        Text="{Binding Patient.FullName, Mode=OneWay}" />
                    <StackPanel Margin="0,4,0,0" Orientation="Horizontal">
                        <TextBlock
                            FontSize="12"
                            Foreground="{DynamicResource TextOnPrimaryBrush}"
                            Opacity="0.9"
                            Text="CF: " />
                        <TextBlock
                            FontSize="12"
                            Foreground="{DynamicResource TextOnPrimaryBrush}"
                            Opacity="0.9"
                            Text="{Binding Patient.FiscalCode, Mode=OneWay}" />
                        <TextBlock
                            FontSize="12"
                            Foreground="{DynamicResource TextOnPrimaryBrush}"
                            Opacity="0.9"
                            Text=" | EtÃ : " />
                        <TextBlock
                            FontSize="12"
                            Foreground="{DynamicResource TextOnPrimaryBrush}"
                            Opacity="0.9"
                            Text="{Binding Patient.Age, Mode=OneWay}" />
                        <TextBlock
                            FontSize="12"
                            Foreground="{DynamicResource TextOnPrimaryBrush}"
                            Opacity="0.9"
                            Text=" anni | Nato il: " />
                        <TextBlock
                            FontSize="12"
                            Foreground="{DynamicResource TextOnPrimaryBrush}"
                            Opacity="0.9"
                            Text="{Binding Patient.BirthDate, StringFormat=dd/MM/yyyy, Mode=OneWay}" />
                    </StackPanel>
                </StackPanel>

                <!--  Azioni  -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">

                    <!--  Pulsante Gestione INR  -->
                    <Button
                        Margin="0,0,10,0"
                        Padding="15,8"
                        Background="{DynamicResource WarningBrush}"
                        BorderThickness="0"
                        Command="{Binding OpenINRControlCommand}"
                        Content="ðŸ“Š Aggiungi INR"
                        Cursor="Hand"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Foreground="{DynamicResource TextOnPrimaryBrush}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border
                                                Padding="{TemplateBinding Padding}"
                                                Background="{TemplateBinding Background}"
                                                CornerRadius="4">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource WarningHoverBrush}" />
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource WarningHoverBrush}" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!--  Pulsante Modifica Anagrafica  -->
                    <Button
                        Padding="15,8"
                        Background="{DynamicResource CardBackgroundBrush}"
                        BorderThickness="0"
                        Command="{Binding EditPatientCommand}"
                        Content="âœ Modifica Anagrafica"
                        Cursor="Hand"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Foreground="{DynamicResource PrimaryBrush}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border
                                                Padding="{TemplateBinding Padding}"
                                                Background="{TemplateBinding Background}"
                                                CornerRadius="4">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource HoverBackgroundBrush}" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                </StackPanel>
            </Grid>
        </Border>

        <!--  TabControl con sezioni  -->
        <TabControl
            Grid.Row="1"
            Padding="0"
            BorderThickness="0"
            SelectedIndex="{Binding SelectedTabIndex}">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border
                                    Name="Border"
                                    Padding="12,10"
                                    Background="Transparent"
                                    BorderThickness="0">
                                    <ContentPresenter
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        ContentSource="Header" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="{DynamicResource CardBackgroundBrush}" />
                                        <Setter TargetName="Border" Property="BorderThickness" Value="0,0,0,3" />
                                        <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource PrimaryBrush}" />
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="{DynamicResource HoverBackgroundBrush}" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="FontSize" Value="12" />
                    <Setter Property="FontWeight" Value="SemiBold" />
                    <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
                </Style>
            </TabControl.Resources>

            <!--  Tab 1: Anagrafica  -->
            <TabItem Header="ðŸ“‹ Anagrafica">
                <ScrollViewer Padding="30" VerticalScrollBarVisibility="Auto" Background="{DynamicResource ContentBackgroundBrush}">
                    <StackPanel MaxWidth="700">
                        <TextBlock
                            Margin="0,0,0,15"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="{DynamicResource PrimaryBrush}"
                            Text="DATI PERSONALI" />

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                Margin="0,8"
                                FontWeight="SemiBold"
                                Foreground="{DynamicResource TextSecondaryBrush}"
                                Text="Nome:" />
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="1"
                                Margin="0,8"
                                Foreground="{DynamicResource TextPrimaryBrush}"
                                Text="{Binding Patient.FirstName}" />

                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="0"
                                Margin="0,8"
                                FontWeight="SemiBold"
                                Foreground="{DynamicResource TextSecondaryBrush}"
                                Text="Cognome:" />
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="0,8"
                                Foreground="{DynamicResource TextPrimaryBrush}"
                                Text="{Binding Patient.LastName}" />

                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="0"
                                Margin="0,8"
                                FontWeight="SemiBold"
                                Foreground="{DynamicResource TextSecondaryBrush}"
                                Text="Codice Fiscale:" />
                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="1"
                                Margin="0,8"
                                Foreground="{DynamicResource TextPrimaryBrush}"
                                Text="{Binding Patient.FiscalCode}" />

                            <TextBlock
                                Grid.Row="3"
                                Grid.Column="0"
                                Margin="0,8"
                                FontWeight="SemiBold"
                                Foreground="{DynamicResource TextSecondaryBrush}"
                                Text="Sesso:" />
                            <TextBlock
                                Grid.Row="3"
                                Grid.Column="1"
                                Margin="0,8"
                                Foreground="{DynamicResource TextPrimaryBrush}"
                                Text="{Binding Patient.Gender}" />

                            <TextBlock
                                Grid.Row="4"
                                Grid.Column="0"
                                Margin="0,8"
                                FontWeight="SemiBold"
                                Foreground="{DynamicResource TextSecondaryBrush}"
                                Text="Telefono:" />
                            <TextBlock
                                Grid.Row="4"
                                Grid.Column="1"
                                Margin="0,8"
                                Foreground="{DynamicResource TextPrimaryBrush}"
                                Text="{Binding Patient.Phone}" />

                            <TextBlock
                                Grid.Row="5"
                                Grid.Column="0"
                                Margin="0,8"
                                FontWeight="SemiBold"
                                Foreground="{DynamicResource TextSecondaryBrush}"
                                Text="Email:" />
                            <TextBlock
                                Grid.Row="5"
                                Grid.Column="1"
                                Margin="0,8"
                                Foreground="{DynamicResource TextPrimaryBrush}"
                                Text="{Binding Patient.Email}" />
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!--  Tab 2: Valutazione Pre-TAO  -->
            <TabItem Header="ðŸ©º Valutazione Pre-TAO">
                <local:PreTaoAssessmentSummary DataContext="{Binding PreTaoAssessmentViewModel}" />
            </TabItem>

            <!--  Tab 3: Indicazione alla TAO  -->
            <TabItem Header="ðŸŽ¯ Indicazione alla TAO">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!--  Toolbar  -->
                    <Border
                        Grid.Row="0"
                        Padding="20,15"
                        Background="{DynamicResource ToolbarBackgroundBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="0,0,0,1">
                        <StackPanel Orientation="Horizontal">
                            <Button
                                Margin="0,0,10,0"
                                Padding="15,8"
                                Background="{DynamicResource SuccessBrush}"
                                BorderThickness="0"
                                Command="{Binding AddIndicationCommand}"
                                Content="âž• Nuova Indicazione"
                                Cursor="Hand"
                                FontWeight="SemiBold"
                                Foreground="{DynamicResource TextOnPrimaryBrush}">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border
                                                        Padding="{TemplateBinding Padding}"
                                                        Background="{TemplateBinding Background}"
                                                        CornerRadius="4">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{DynamicResource SuccessHoverBrush}" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <Button
                                Padding="15,8"
                                Background="{DynamicResource DangerBrush}"
                                BorderThickness="0"
                                Command="{Binding EndIndicationCommand}"
                                Content="â¹ Termina Indicazione"
                                Cursor="Hand"
                                FontWeight="SemiBold"
                                Foreground="{DynamicResource TextOnPrimaryBrush}">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border
                                                        Padding="{TemplateBinding Padding}"
                                                        Background="{TemplateBinding Background}"
                                                        CornerRadius="4">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{DynamicResource DangerHoverBrush}" />
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter Property="Background" Value="{DynamicResource ControlDisabledBrush}" />
                                                <Setter Property="Cursor" Value="Arrow" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Border>

                    <!--  Lista Indicazioni  -->
                    <DataGrid
                        Grid.Row="1"
                        AlternatingRowBackground="{DynamicResource DataGridAlternateRowBrush}"
                        AutoGenerateColumns="False"
                        CanUserResizeRows="False"
                        CanUserSortColumns="True"
                        FontSize="13"
                        GridLinesVisibility="Horizontal"
                        HeadersVisibility="Column"
                        IsReadOnly="True"
                        ItemsSource="{Binding Indications}"
                        RowHeight="50"
                        SelectedItem="{Binding SelectedIndication}"
                        SelectionMode="Single"
                        Background="{DynamicResource CardBackgroundBrush}"
                        Foreground="{DynamicResource TextPrimaryBrush}"
                        BorderBrush="{DynamicResource BorderBrush}">

                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="{DynamicResource DataGridHeaderBrush}" />
                                <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
                                <Setter Property="FontWeight" Value="SemiBold" />
                                <Setter Property="Padding" Value="12,10" />
                                <Setter Property="BorderThickness" Value="0,0,1,1" />
                                <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
                                <Setter Property="HorizontalContentAlignment" Value="Left" />
                            </Style>
                        </DataGrid.ColumnHeaderStyle>

                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Padding" Value="12,0" />
                                <Setter Property="BorderThickness" Value="0" />
                                <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="DataGridCell">
                                            <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                                                <ContentPresenter VerticalAlignment="Center" TextElement.Foreground="{TemplateBinding Foreground}" />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource DataGridSelectedBrush}" />
                                        <Setter Property="Foreground" Value="{DynamicResource DataGridSelectedTextBrush}" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.CellStyle>

                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="{DynamicResource DataGridRowBrush}" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource DataGridHoverBrush}" />
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource DataGridSelectedBrush}" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>

                        <DataGrid.Columns>
                            <!--  Stato  -->
                            <DataGridTextColumn
                                Width="100"
                                Binding="{Binding Status}"
                                Header="Stato" />

                            <!--  Categoria  -->
                            <DataGridTextColumn
                                Width="200"
                                Binding="{Binding Category}"
                                Header="Categoria" />

                            <!--  Descrizione  -->
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding Description}"
                                Header="Indicazione" />

                            <!--  Target INR  -->
                            <DataGridTextColumn
                                Width="120"
                                Binding="{Binding TargetINRRange}"
                                Header="Target INR" />

                            <!--  Periodo  -->
                            <DataGridTextColumn
                                Width="250"
                                Binding="{Binding Period}"
                                Header="Periodo" />
                        </DataGrid.Columns>
                    </DataGrid>

                    <!--  Messaggio lista vuota  -->
                    <StackPanel
                        Grid.Row="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Visibility="{Binding Indications.Count, Converter={StaticResource CountToVisibilityConverter}}">
                        <TextBlock
                            Margin="0,0,0,10"
                            HorizontalAlignment="Center"
                            FontSize="16"
                            Foreground="{DynamicResource TextTertiaryBrush}"
                            Text="ðŸ“‹ Nessuna indicazione registrata" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="13"
                            Foreground="{DynamicResource TextTertiaryBrush}"
                            Text="Clicca su 'Nuova Indicazione' per aggiungerne una" />
                    </StackPanel>
                </Grid>
            </TabItem>

            <!--  Tab 3: Farmaci  -->
            <TabItem Header="ðŸ’Š Farmaci">
                <local:MedicationsView DataContext="{Binding MedicationsViewModel}" />
            </TabItem>

            <!--  Tab 4: Storico INR  -->
            <TabItem Header="ðŸ“Š Storico INR">
                <local:INRHistoryView DataContext="{Binding InrHistoryViewModel}" />
            </TabItem>

            <!--  Tab 5: Bridge Therapy  -->
            <TabItem Header="ðŸ’‰ Bridge Therapy">
                <local:BridgeTherapyView DataContext="{Binding BridgeTherapyViewModel}" />
            </TabItem>

            <!--  Tab 6: Eventi Avversi  -->
            <TabItem Header="âš  Eventi Avversi">
                <local:AdverseEventsView DataContext="{Binding AdverseEventsViewModel}" />
            </TabItem>

            <!--  Tab 7: Switch Terapia  -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            Text="{Binding SwitchTherapyViewModel.HasActiveSwitches, Converter={StaticResource BoolToVisibilityConverter}}"
                            Visibility="Collapsed" />
                        <TextBlock
                            FontSize="14"
                            Foreground="{DynamicResource WarningBrush}"
                            FontWeight="Bold">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="ðŸ”„" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SwitchTherapyViewModel.HasActiveSwitches}" Value="True">
                                            <Setter Property="Text" Value="âš ï¸" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <TextBlock Text=" Switch Terapia" Margin="4,0,0,0" />
                    </StackPanel>
                </TabItem.Header>
                <local:SwitchTherapyTabView DataContext="{Binding SwitchTherapyViewModel}" />
            </TabItem>
        </TabControl>

        <!--  Loading Overlay  -->
        <Grid
            Grid.RowSpan="2"
            Background="#80FFFFFF"
            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Foreground="{DynamicResource PrimaryBrush}"
                    Text="â³ Caricamento dati paziente..." />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
