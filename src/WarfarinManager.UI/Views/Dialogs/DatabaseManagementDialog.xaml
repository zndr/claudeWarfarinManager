<Window
    x:Class="WarfarinManager.UI.Views.Dialogs.DatabaseManagementDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:WarfarinManager.UI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:WarfarinManager.UI.ViewModels"
    Title="Gestione Database"
    Width="700"
    Height="600"
    d:DataContext="{d:DesignInstance Type=vm:DatabaseManagementViewModel}"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock
                FontSize="18"
                FontWeight="Bold"
                Text="ðŸ’¾ Gestione Database" />
            <TextBlock
                Margin="0,5,0,0"
                FontSize="12"
                Foreground="#666"
                Text="Backup, ripristino e manutenzione del database TaoGEST"
                TextWrapping="Wrap" />
        </StackPanel>

        <!--  Content  -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!--  Informazioni Database  -->
                <Border
                    Padding="15"
                    Background="#F5F5F5"
                    BorderBrush="#DDDDDD"
                    BorderThickness="1"
                    CornerRadius="4">
                    <StackPanel>
                        <TextBlock
                            FontSize="14"
                            FontWeight="SemiBold"
                            Text="â„¹ï¸ Informazioni Database" />

                        <Grid Margin="0,15,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                Margin="0,0,15,8"
                                FontSize="12"
                                FontWeight="SemiBold"
                                Text="Percorso:" />
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="1"
                                Margin="0,0,0,8"
                                FontSize="12"
                                Text="{Binding DatabasePath}"
                                TextTrimming="CharacterEllipsis"
                                ToolTip="{Binding DatabasePath}" />

                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="0"
                                Margin="0,0,15,8"
                                FontSize="12"
                                FontWeight="SemiBold"
                                Text="Dimensione:" />
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="0,0,0,8"
                                FontSize="12">
                                <Run Text="{Binding DatabaseSizeMB, StringFormat={}{0:F2}}" />
                                <Run Text="MB" />
                            </TextBlock>

                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="0"
                                Margin="0,0,15,0"
                                FontSize="12"
                                FontWeight="SemiBold"
                                Text="Ultimo backup:" />
                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="1"
                                FontSize="12"
                                Text="{Binding LastBackupDate, StringFormat={}{0:dd/MM/yyyy HH:mm}, TargetNullValue=Mai eseguito}" />
                        </Grid>

                        <Button
                            Margin="0,10,0,0"
                            Padding="8,5"
                            HorizontalAlignment="Left"
                            Command="{Binding OpenDatabaseFolderCommand}"
                            Content="ðŸ“ Apri cartella database"
                            FontSize="11" />
                    </StackPanel>
                </Border>

                <!--  Statistiche  -->
                <Border
                    Margin="0,15,0,0"
                    Padding="15"
                    Background="White"
                    BorderBrush="#DDDDDD"
                    BorderThickness="1"
                    CornerRadius="4">
                    <StackPanel>
                        <TextBlock
                            FontSize="14"
                            FontWeight="SemiBold"
                            Text="ðŸ“Š Statistiche" />

                        <Grid Margin="0,15,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!--  Pazienti  -->
                            <Border
                                Grid.Row="0"
                                Grid.Column="0"
                                Margin="0,0,5,5"
                                Padding="10"
                                Background="#EEF7FF"
                                BorderBrush="#0078D4"
                                BorderThickness="1"
                                CornerRadius="3">
                                <StackPanel>
                                    <TextBlock
                                        FontSize="11"
                                        Foreground="#666"
                                        Text="Pazienti" />
                                    <TextBlock
                                        FontSize="20"
                                        FontWeight="Bold"
                                        Foreground="#0078D4"
                                        Text="{Binding TotalPatients}" />
                                </StackPanel>
                            </Border>

                            <!--  Controlli INR  -->
                            <Border
                                Grid.Row="0"
                                Grid.Column="1"
                                Margin="5,0,0,5"
                                Padding="10"
                                Background="#F0F9F0"
                                BorderBrush="#107C10"
                                BorderThickness="1"
                                CornerRadius="3">
                                <StackPanel>
                                    <TextBlock
                                        FontSize="11"
                                        Foreground="#666"
                                        Text="Controlli INR" />
                                    <TextBlock
                                        FontSize="20"
                                        FontWeight="Bold"
                                        Foreground="#107C10"
                                        Text="{Binding TotalINRControls}" />
                                </StackPanel>
                            </Border>

                            <!--  Indicazioni  -->
                            <Border
                                Grid.Row="1"
                                Grid.Column="0"
                                Margin="0,5,5,0"
                                Padding="10"
                                Background="#FFF8F0"
                                BorderBrush="#FF8C00"
                                BorderThickness="1"
                                CornerRadius="3">
                                <StackPanel>
                                    <TextBlock
                                        FontSize="11"
                                        Foreground="#666"
                                        Text="Indicazioni" />
                                    <TextBlock
                                        FontSize="20"
                                        FontWeight="Bold"
                                        Foreground="#FF8C00"
                                        Text="{Binding TotalIndications}" />
                                </StackPanel>
                            </Border>

                            <!--  Eventi Avversi  -->
                            <Border
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="5,5,0,0"
                                Padding="10"
                                Background="#FFF0F0"
                                BorderBrush="#D13438"
                                BorderThickness="1"
                                CornerRadius="3">
                                <StackPanel>
                                    <TextBlock
                                        FontSize="11"
                                        Foreground="#666"
                                        Text="Eventi Avversi" />
                                    <TextBlock
                                        FontSize="20"
                                        FontWeight="Bold"
                                        Foreground="#D13438"
                                        Text="{Binding TotalAdverseEvents}" />
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>

                <!--  Operazioni  -->
                <Border
                    Margin="0,15,0,0"
                    Padding="15"
                    Background="White"
                    BorderBrush="#DDDDDD"
                    BorderThickness="1"
                    CornerRadius="4">
                    <StackPanel>
                        <TextBlock
                            FontSize="14"
                            FontWeight="SemiBold"
                            Text="âš™ï¸ Operazioni" />

                        <Grid Margin="0,15,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!--  Backup  -->
                            <Button
                                Grid.Row="0"
                                Grid.Column="0"
                                Height="70"
                                Margin="0,0,5,5"
                                Command="{Binding BackupCommand}">
                                <Button.Content>
                                    <StackPanel>
                                        <TextBlock
                                            FontSize="16"
                                            Text="ðŸ’¾" />
                                        <TextBlock
                                            FontSize="12"
                                            FontWeight="SemiBold"
                                            Text="Backup" />
                                        <TextBlock
                                            FontSize="10"
                                            Foreground="#666"
                                            Text="Salva una copia" />
                                    </StackPanel>
                                </Button.Content>
                            </Button>

                            <!--  Ripristino  -->
                            <Button
                                Grid.Row="0"
                                Grid.Column="1"
                                Height="70"
                                Margin="5,0,0,5"
                                Command="{Binding RestoreCommand}">
                                <Button.Content>
                                    <StackPanel>
                                        <TextBlock
                                            FontSize="16"
                                            Text="ðŸ“‚" />
                                        <TextBlock
                                            FontSize="12"
                                            FontWeight="SemiBold"
                                            Text="Ripristino" />
                                        <TextBlock
                                            FontSize="10"
                                            Foreground="#666"
                                            Text="Carica un backup" />
                                    </StackPanel>
                                </Button.Content>
                            </Button>

                            <!--  Compattazione  -->
                            <Button
                                Grid.Row="1"
                                Grid.Column="0"
                                Height="70"
                                Margin="0,5,5,0"
                                Command="{Binding CompactCommand}">
                                <Button.Content>
                                    <StackPanel>
                                        <TextBlock
                                            FontSize="16"
                                            Text="ðŸ—œï¸" />
                                        <TextBlock
                                            FontSize="12"
                                            FontWeight="SemiBold"
                                            Text="Compatta" />
                                        <TextBlock
                                            FontSize="10"
                                            Foreground="#666"
                                            Text="Ottimizza spazio" />
                                    </StackPanel>
                                </Button.Content>
                            </Button>

                            <!--  Verifica IntegritÃ   -->
                            <Button
                                Grid.Row="1"
                                Grid.Column="1"
                                Height="70"
                                Margin="5,5,0,0"
                                Command="{Binding CheckIntegrityCommand}">
                                <Button.Content>
                                    <StackPanel>
                                        <TextBlock
                                            FontSize="16"
                                            Text="âœ”ï¸" />
                                        <TextBlock
                                            FontSize="12"
                                            FontWeight="SemiBold"
                                            Text="Verifica" />
                                        <TextBlock
                                            FontSize="10"
                                            Foreground="#666"
                                            Text="Controlla integritÃ " />
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!--  Status Bar  -->
        <Border
            Grid.Row="2"
            Margin="0,15,0,0"
            Padding="10,8"
            Background="#F0F0F0"
            BorderBrush="#CCCCCC"
            BorderThickness="1"
            CornerRadius="3">
            <Grid>
                <TextBlock
                    FontSize="11"
                    Foreground="#666"
                    Text="{Binding StatusMessage}" />
                <StackPanel
                    HorizontalAlignment="Right"
                    Orientation="Horizontal"
                    Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock
                        Margin="0,0,8,0"
                        VerticalAlignment="Center"
                        FontSize="11"
                        Foreground="#0078D4"
                        Text="â³ Elaborazione..." />
                </StackPanel>
            </Grid>
        </Border>

        <!--  Close Button  -->
        <Button
            Grid.Row="3"
            Width="100"
            Height="35"
            Margin="0,15,0,0"
            HorizontalAlignment="Right"
            Click="CloseButton_Click"
            Content="Chiudi"
            FontSize="13"
            IsCancel="True" />
    </Grid>
</Window>
