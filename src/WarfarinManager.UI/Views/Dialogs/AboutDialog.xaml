                                <TextBlock Margin="10,3" Foreground="{DynamicResource TextPrimaryBrush}" Text="• Verifica interazioni farmacologiche" />
                                <TextBlock Margin="10,3" Foreground="{DynamicResource TextPrimaryBrush}" Text="• Gestione bridge therapy" />
