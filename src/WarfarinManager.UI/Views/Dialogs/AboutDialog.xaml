<Window
    x:Class="WarfarinManager.UI.Views.Dialogs.AboutDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="About TaoGEST"
    Width="700"
    Height="600"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">

    <Grid Background="{DynamicResource WindowBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Header con logo e info versione  -->
        <Border
            Grid.Row="0"
            Padding="30,25"
            Background="{DynamicResource HeaderBackgroundBrush}">
            <StackPanel HorizontalAlignment="Center">
                <TextBlock
                    FontSize="28"
                    FontWeight="Bold"
                    Foreground="{DynamicResource TextOnPrimaryBrush}"
                    Text="TaoGEST" />
                <TextBlock
                    Margin="0,5,0,0"
                    FontSize="14"
                    Foreground="#ECF0F1"
                    Text="Gestione Terapia Anticoagulante Orale" />
                <TextBlock
                    x:Name="VersionText"
                    Margin="0,10,0,0"
                    FontSize="12"
                    Foreground="#BDC3C7"
                    HorizontalAlignment="Center" />
            </StackPanel>
        </Border>

        <!--  Contenuto con TabControl  -->
        <TabControl Grid.Row="1" Margin="0" Background="{DynamicResource WindowBackgroundBrush}">
            <!--  Tab Informazioni  -->
            <TabItem Header="Informazioni">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Background="{DynamicResource ContentBackgroundBrush}">
                    <StackPanel Margin="30,20">
                        <TextBlock
                            FontSize="14"
                            Foreground="{DynamicResource TextPrimaryBrush}"
                            Text="Sistema di gestione per la terapia anticoagulante orale con Warfarin destinato ai medici di medicina generale italiani."
                            TextWrapping="Wrap" />

                        <TextBlock
                            Margin="0,20,0,5"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="{DynamicResource TextPrimaryBrush}"
                            Text="Caratteristiche principali:" />
                        <StackPanel Margin="10,5,0,0">
                            <TextBlock Margin="0,3" Foreground="{DynamicResource TextPrimaryBrush}" Text="• Calcolo automatico dosaggio Warfarin (linee guida FCSA/ACCP)" />
                            <TextBlock Margin="0,3" Foreground="{DynamicResource TextPrimaryBrush}" Text="• Monitoraggio INR e grafici trend" />
                            <TextBlock Margin="0,3" Foreground="{DynamicResource TextPrimaryBrush}" Text="• Gestione score CHA₂DS₂-VASc e HAS-BLED" />
                            <TextBlock Margin="0,3" Foreground="{DynamicResource TextPrimaryBrush}" Text="• Verifica interazioni farmacologiche" />
                            <TextBlock Margin="0,3" Foreground="{DynamicResource TextPrimaryBrush}" Text="• Export PDF per il paziente" />
                            <TextBlock Margin="0,3" Foreground="{DynamicResource TextPrimaryBrush}" Text="• Guide professionali integrate" />
                            <TextBlock Margin="0,3" Foreground="{DynamicResource TextPrimaryBrush}" Text="• Wizard configurazione iniziale paziente" />
                        </StackPanel>

                        <TextBlock
                            Margin="0,20,0,5"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="{DynamicResource TextPrimaryBrush}"
                            Text="Requisiti di sistema:" />
                        <StackPanel Margin="10,5,0,0">
                            <TextBlock Margin="0,3" Foreground="{DynamicResource TextPrimaryBrush}" Text="• Windows 10 (versione 1809 o successiva) o Windows 11" />
                            <TextBlock Margin="0,3" Foreground="{DynamicResource TextPrimaryBrush}" Text="• Nessun runtime richiesto (applicazione self-contained)" />
                            <TextBlock Margin="0,3" Foreground="{DynamicResource TextPrimaryBrush}" Text="• 200 MB spazio su disco" />
                            <TextBlock Margin="0,3" Foreground="{DynamicResource TextPrimaryBrush}" Text="• 4 GB RAM (consigliati)" />
                            <TextBlock Margin="0,3" Foreground="{DynamicResource TextPrimaryBrush}" Text="• Risoluzione schermo: 1280x720 minima" />
                        </StackPanel>

                        <TextBlock
                            Margin="0,30,0,10"
                            FontSize="13"
                            Foreground="{DynamicResource TextSecondaryBrush}"
                            Text="© 2025 - dr Dario Giorgio Zani"
                            TextAlignment="Center" />
                        <TextBlock
                            FontSize="12"
                            Foreground="#95A5A6"
                            Text="Tutti i diritti riservati"
                            TextAlignment="Center" />
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!--  Tab Changelog  -->
            <TabItem Header="Novità">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Background="{DynamicResource ContentBackgroundBrush}">
                    <StackPanel Margin="30,20">
                        <!--  Versione 1.4.0.0  -->
                        <Border
                            Margin="0,0,0,15"
                            Padding="15"
                            Background="{DynamicResource CardBackgroundBrush}"
                            BorderBrush="{DynamicResource PrimaryBrush}"
                            BorderThickness="2"
                            CornerRadius="5">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        FontSize="16"
                                        FontWeight="SemiBold"
                                        Foreground="{DynamicResource TextPrimaryBrush}"
                                        Text="Versione 1.4.0.0 (27 Dicembre 2025)" />
                                    <Border
                                        Margin="10,0,0,0"
                                        Padding="8,2"
                                        Background="#27AE60"
                                        CornerRadius="3"
                                        VerticalAlignment="Center">
                                        <TextBlock
                                            FontSize="10"
                                            FontWeight="Bold"
                                            Foreground="White"
                                            Text="NUOVO" />
                                    </Border>
                                </StackPanel>
                                <TextBlock
                                    Margin="0,10,0,5"
                                    FontWeight="SemiBold"
                                    Foreground="#9B59B6"
                                    Text="Integrazione Millewin Migliorata:" />
                                <TextBlock Margin="10,3" Foreground="{DynamicResource TextPrimaryBrush}" Text="• Collegamento diretto paziente-Millewin tramite codice univoco" />
                                <TextBlock Margin="10,3" Foreground="{DynamicResource TextPrimaryBrush}" Text="• Nuovo campo 'Codice MWin' nel form anagrafica paziente" />
                                <TextBlock Margin="10,3" Foreground="{DynamicResource TextPrimaryBrush}" Text="• Query SQL ottimizzate con snippet riutilizzabili" />
                                <TextBlock Margin="10,3" Foreground="{DynamicResource TextPrimaryBrush}" Text="• Validazione paziente-medico con clausole obbligatorie" />
                                <TextBlock
                                    Margin="0,10,0,5"
                                    FontWeight="SemiBold"
                                    Foreground="#E74C3C"
                                    Text="Bug Fix:" />
                                <TextBlock Margin="10,3" Foreground="{DynamicResource TextPrimaryBrush}" Text="• Corretto avviso 'modifiche non salvate' errato nel dialog anagrafica" />
                            </StackPanel>
                        </Border>

                        <!--  Versione 1.3.0.0  -->
                        <Border
                            Margin="0,0,0,15"
                            Padding="15"
                            Background="{DynamicResource CardBackgroundBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="5">
                            <StackPanel>
                                <TextBlock
                                    FontSize="16"
                                    FontWeight="SemiBold"
                                    Foreground="{DynamicResource TextPrimaryBrush}"
                                    Text="Versione 1.3.0.0 (26 Dicembre 2025)" />
                                <TextBlock
                                    Margin="0,10,0,5"
                                    FontWeight="SemiBold"
                                    Foreground="#9B59B6"
                                    Text="Nuove Funzionalità:" />
                                <TextBlock Margin="10,3" Foreground="{DynamicResource TextPrimaryBrush}" Text="• Modulo DoacGEST per gestione terapia con DOAC (NAO)" />
                                <TextBlock Margin="10,3" Foreground="{DynamicResource TextPrimaryBrush}" Text="• Calcolo automatico dosaggio DOAC basato su peso e funzionalità renale" />
                                <TextBlock Margin="10,3" Foreground="{DynamicResource TextPrimaryBrush}" Text="• Checker interazioni farmacologiche DOAC con P-gp e CYP3A4" />
                                <TextBlock Margin="10,3" Foreground="{DynamicResource TextPrimaryBrush}" Text="• Calcolo score HAS-BLED per rischio emorragico" />
                                <TextBlock Margin="10,3" Foreground="{DynamicResource TextPrimaryBrush}" Text="• Biblioteca Documenti con accesso rapido a guide e RCP" />
                                <TextBlock
                                    Margin="0,10,0,5"
                                    FontWeight="SemiBold"
                                    Foreground="#3498DB"
                                    Text="Documenti Inclusi:" />
                                <TextBlock Margin="10,3" Foreground="{DynamicResource TextPrimaryBrush}" Text="• RCP ufficiali EMA per tutti i DOAC" />
                                <TextBlock Margin="10,3" Foreground="{DynamicResource TextPrimaryBrush}" Text="• Linee guida FCSA, FCSA-SIMG 2018, ESC 2024" />
                                <TextBlock Margin="10,3" Foreground="{DynamicResource TextPrimaryBrush}" Text="• Checker interazioni DOAC interattivo" />
                                <TextBlock
                                    Margin="0,10,0,5"
                                    FontWeight="SemiBold"
                                    Foreground="#27AE60"
                                    Text="Miglioramenti:" />
                                <TextBlock Margin="10,3" Foreground="{DynamicResource TextPrimaryBrush}" Text="• Nuovo menu Strumenti con accesso diretto a DoacGEST" />
                                <TextBlock Margin="10,3" Foreground="{DynamicResource TextPrimaryBrush}" Text="• Ricerca documenti per titolo, descrizione e keywords" />
                                <TextBlock Margin="10,3" Foreground="{DynamicResource TextPrimaryBrush}" Text="• Filtro documenti per categoria" />
                            </StackPanel>
                        </Border>

                        <!--  Versione 1.2.3.1  -->
                        <Border
                            Margin="0,0,0,15"
                            Padding="15"
                            Background="{DynamicResource CardBackgroundBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="5">
                            <StackPanel>
                                <TextBlock
                                    FontSize="16"
                                    FontWeight="SemiBold"
                                    Foreground="{DynamicResource TextPrimaryBrush}"
                                    Text="Versione 1.2.3.1 (23 Dicembre 2025)" />
                                <TextBlock
                                    Margin="0,10,0,5"
                                    FontWeight="SemiBold"
                                    Foreground="#E74C3C"
                                    Text="Hotfix Installer:" />
                                <TextBlock Margin="10,3" Foreground="{DynamicResource TextPrimaryBrush}" Text="• RISOLTO: Installer v1.2.3 richiedeva .NET 8 anche se già installato" />
                                <TextBlock Margin="10,3" Foreground="{DynamicResource TextPrimaryBrush}" Text="• Rimosso controllo errato .NET Runtime dall'installer" />
                                <TextBlock Margin="10,3" Foreground="{DynamicResource TextPrimaryBrush}" Text="• L'app è self-contained e non richiede .NET separato" />
                            </StackPanel>
                        </Border>

                        <!--  Versione 1.2.3  -->
                        <Border
                            Margin="0,0,0,15"
                            Padding="15"
                            Background="{DynamicResource CardBackgroundBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="5">
                            <StackPanel>
                                <TextBlock
                                    FontSize="16"
                                    FontWeight="SemiBold"
                                    Foreground="{DynamicResource TextPrimaryBrush}"
                                    Text="Versione 1.2.3 (22 Dicembre 2025)" />
                                <TextBlock
                                    Margin="0,10,0,5"
                                    FontWeight="SemiBold"
                                    Foreground="#E74C3C"
                                    Text="Bugfix:" />
                                <TextBlock Margin="10,3" Foreground="{DynamicResource TextPrimaryBrush}" Text="• Risolto errore 'no such column certaintyLevel' su database legacy (v1.0.0)" />
                                <TextBlock Margin="10,3" Foreground="{DynamicResource TextPrimaryBrush}" Text="• Correzione automatica schema database all'avvio" />
                                <TextBlock
                                    Margin="0,10,0,5"
                                    FontWeight="SemiBold"
                                    Foreground="#27AE60"
                                    Text="Miglioramenti:" />
                                <TextBlock Margin="10,3" Foreground="{DynamicResource TextPrimaryBrush}" Text="• Finestra Controllo INR adattiva per schermi piccoli (laptop 15'')" />
                                <TextBlock Margin="10,3" Foreground="{DynamicResource TextPrimaryBrush}" Text="• Finestra Modifica INR ora ridimensionabile" />
                                <TextBlock Margin="10,3" Foreground="{DynamicResource TextPrimaryBrush}" Text="• Le finestre si centrano correttamente su tutti gli schermi" />
                            </StackPanel>
                        </Border>

                        <!--  Versione 1.2.2.2  -->
                        <Border
                            Margin="0,0,0,15"
                            Padding="15"
                            Background="{DynamicResource CardBackgroundBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="5">
                            <StackPanel>
                                <TextBlock
                                    FontSize="16"
                                    FontWeight="SemiBold"
                                    Foreground="{DynamicResource TextPrimaryBrush}"
                                    Text="Versione 1.2.2.2 (22 Dicembre 2025)" />
                                <TextBlock
                                    Margin="0,10,0,5"
                                    FontWeight="SemiBold"
                                    Foreground="#E74C3C"
                                    Text="Bugfix:" />
                                <TextBlock Margin="10,3" Foreground="{DynamicResource TextPrimaryBrush}" Text="• Corretto bug controllo aggiornamenti" />
                            </StackPanel>
                        </Border>

                        <!--  Versione 1.2.2.1  -->
                        <Border
                            Margin="0,0,0,15"
                            Padding="15"
                            Background="{DynamicResource CardBackgroundBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="5">
                            <StackPanel>
                                <TextBlock
                                    FontSize="16"
                                    FontWeight="SemiBold"
                                    Foreground="{DynamicResource TextPrimaryBrush}"
                                    Text="Versione 1.2.2.1 (22 Dicembre 2025)" />
                                <TextBlock
                                    Margin="0,10,0,5"
                                    FontWeight="SemiBold"
                                    Foreground="#27AE60"
                                    Text="Miglioramenti UX:" />
                                <TextBlock Margin="10,3" Foreground="{DynamicResource TextPrimaryBrush}" Text="• Controllo aggiornamenti ora completamente silenzioso all'avvio" />
                                <TextBlock Margin="10,3" Foreground="{DynamicResource TextPrimaryBrush}" Text="• Notifiche mostrate SOLO quando è disponibile una nuova versione" />
                                <TextBlock Margin="10,3" Foreground="{DynamicResource TextPrimaryBrush}" Text="• Eliminati messaggi superflui quando l'app è già aggiornata" />
                            </StackPanel>
                        </Border>

                        <!--  Versione 1.2.2  -->
                        <Border
                            Margin="0,0,0,15"
                            Padding="15"
                            Background="{DynamicResource CardBackgroundBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="5">
                            <StackPanel>
                                <TextBlock
                                    FontSize="16"
                                    FontWeight="SemiBold"
                                    Foreground="{DynamicResource TextPrimaryBrush}"
                                    Text="Versione 1.2.2 (22 Dicembre 2025)" />
                                <TextBlock
                                    Margin="0,10,0,5"
                                    FontWeight="SemiBold"
                                    Foreground="#E74C3C"
                                    Text="Correzione critica:" />
                                <TextBlock Margin="10,3" Foreground="{DynamicResource TextPrimaryBrush}" Text="• Risolto problema sistema aggiornamenti che non rilevava nuove versioni" />
                                <TextBlock Margin="10,3" Foreground="{DynamicResource TextPrimaryBrush}" Text="• Configurato correttamente URL HTTPS per controllo aggiornamenti" />
                            </StackPanel>
                        </Border>

                        <!--  Versione 1.2.1  -->
                        <Border
                            Margin="0,0,0,15"
                            Padding="15"
                            Background="{DynamicResource CardBackgroundBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="5">
                            <StackPanel>
                                <TextBlock
                                    FontSize="16"
                                    FontWeight="SemiBold"
                                    Foreground="{DynamicResource TextPrimaryBrush}"
                                    Text="Versione 1.2.1 (22 Dicembre 2025)" />
                                <TextBlock
                                    Margin="0,10,0,5"
                                    FontWeight="SemiBold"
                                    Foreground="{DynamicResource TextPrimaryBrush}"
                                    Text="Feature:" />
                                <TextBlock Margin="10,3" Foreground="{DynamicResource TextPrimaryBrush}" Text="• Aggiunto sistema automatico di controllo degli aggiornamenti" />
                                <TextBlock
                                    Margin="0,10,0,5"
                                    FontWeight="SemiBold"
                                    Foreground="{DynamicResource TextPrimaryBrush}"
                                    Text="Documentazione:" />
                                <TextBlock Margin="10,3" Foreground="{DynamicResource TextPrimaryBrush}" Text="• Aggiunto file CHANGELOG.md con storico versioni" />
                            </StackPanel>
                        </Border>

                        <!--  Versione 1.1.2  -->
                        <Border
                            Margin="0,0,0,15"
                            Padding="15"
                            Background="{DynamicResource CardBackgroundBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="5">
                            <StackPanel>
                                <TextBlock
                                    FontSize="16"
                                    FontWeight="SemiBold"
                                    Foreground="{DynamicResource TextPrimaryBrush}"
                                    Text="Versione 1.1.1 (20 Dicembre 2025)" />
                                <TextBlock
                                    Margin="0,10,0,5"
                                    FontWeight="SemiBold"
                                    Foreground="#E74C3C"
                                    Text="Correzioni critiche:" />
                                <TextBlock Margin="10,3" Foreground="{DynamicResource TextPrimaryBrush}" Text="• Risolto bug critico che generava warning inappropriati per INR normali" />
                                <TextBlock
                                    Margin="0,10,0,5"
                                    FontWeight="SemiBold"
                                    Foreground="{DynamicResource TextPrimaryBrush}"
                                    Text="Miglioramenti UI:" />
                                <TextBlock Margin="10,3" Foreground="{DynamicResource TextPrimaryBrush}" Text="• Sistema di esclusione warning nelle esportazioni" />
                                <TextBlock Margin="10,3" Foreground="{DynamicResource TextPrimaryBrush}" Text="• Miglioramenti PDF e esportazione testo" />
                                <TextBlock Margin="10,3" Foreground="{DynamicResource TextPrimaryBrush}" Text="• UI più intuitiva e professionale" />
                            </StackPanel>
                        </Border>

                        <!--  Versione 1.1.0  -->
                        <Border
                            Margin="0,0,0,15"
                            Padding="15"
                            Background="{DynamicResource CardBackgroundBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="5">
                            <StackPanel>
                                <TextBlock
                                    FontSize="16"
                                    FontWeight="SemiBold"
                                    Foreground="{DynamicResource TextPrimaryBrush}"
                                    Text="Versione 1.1.0 (20 Dicembre 2025)" />
                                <TextBlock
                                    Margin="0,10,0,5"
                                    FontWeight="SemiBold"
                                    Foreground="{DynamicResource TextPrimaryBrush}"
                                    Text="Nuove funzionalità:" />
                                <TextBlock Margin="10,3" Foreground="{DynamicResource TextPrimaryBrush}" Text="• Wizard di configurazione iniziale paziente con step guidati" />
                                <TextBlock Margin="10,3" Foreground="{DynamicResource TextPrimaryBrush}" Text="• Calcolo automatico score CHA₂DS₂-VASc e HAS-BLED" />
