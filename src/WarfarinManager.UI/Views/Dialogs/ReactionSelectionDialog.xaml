<Window x:Class="WarfarinManager.UI.Views.Dialogs.ReactionSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Seleziona Reazione Avversa"
        Height="600"
        Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource CardBackgroundBrush}">

    <Window.Resources>
        <!-- Button style -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D0D0D0"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#C0C0C0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Stili per i badge di gravità -->
        <Style x:Key="CriticalBadge" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource DangerBrush}"/>
            <Setter Property="CornerRadius" Value="3"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>

        <Style x:Key="SeriousBadge" TargetType="Border">
            <Setter Property="Background" Value="#FFB900"/>
            <Setter Property="CornerRadius" Value="3"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>

        <Style x:Key="CommonBadge" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SuccessBrush}"/>
            <Setter Property="CornerRadius" Value="3"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>

        <!-- Style per reazioni che possono insorgere all'inizio -->
        <Style x:Key="EarlyOnsetHighlight" TargetType="Border">
            <Setter Property="BorderBrush" Value="#FF6B00"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="3"/>
            <Setter Property="Padding" Value="4"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource PrimaryBrush}" Padding="20">
            <StackPanel>
                <TextBlock Text="Seleziona Tipo di Reazione Avversa"
                          FontSize="18"
                          FontWeight="SemiBold"
                          Foreground="{DynamicResource TextOnPrimaryBrush}"/>
                <TextBlock Text="Le reazioni sono classificate per gravità. Le reazioni con bordo arancione possono insorgere all'inizio della terapia."
                          FontSize="12"
                          Foreground="{DynamicResource TextOnPrimaryBrush}"
                          Opacity="0.9"
                          TextWrapping="Wrap"
                          Margin="0,8,0,0"/>
            </StackPanel>
        </Border>

        <!-- Lista reazioni -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel x:Name="ReactionsPanel">
                <!-- Le reazioni verranno aggiunte dinamicamente nel code-behind -->
            </StackPanel>
        </ScrollViewer>

        <!-- Footer con bottoni -->
        <Border Grid.Row="2"
                Background="{DynamicResource ToolbarBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Annulla"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Click="CancelButton_Click"
                        MinWidth="100"
                        Margin="0,0,10,0"/>
            </StackPanel>
        </Border>

        <!-- Loading overlay -->
        <Grid Grid.RowSpan="3"
              x:Name="LoadingOverlay"
              Background="#80000000"
              Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True"
                            Width="200"
                            Height="4"
                            Foreground="{DynamicResource PrimaryBrush}"/>
                <TextBlock Text="Caricamento..."
                          Foreground="{DynamicResource TextOnPrimaryBrush}"
                          FontSize="14"
                          Margin="0,10,0,0"
                          HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
