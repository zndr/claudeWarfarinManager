<Window
    x:Class="WarfarinManager.UI.Views.Dialogs.ProfessionalGuidesDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Guide Professionali alla TAO"
    Width="650"
    Height="500"
    WindowStartupLocation="CenterOwner"
    ResizeMode="NoResize"
    mc:Ignorable="d">

    <Window.Resources>
        <Style x:Key="GuideButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="#E0E0E0" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="20,15" />
            <Setter Property="Margin" Value="0,0,0,10" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4">
                            <ContentPresenter
                                Margin="{TemplateBinding Padding}"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F8FF" />
                    <Setter Property="BorderBrush" Value="#0078D4" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#E6F2FF" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <Border
            Grid.Row="0"
            Padding="20,15"
            Background="#0078D4">
            <StackPanel>
                <TextBlock
                    FontSize="18"
                    FontWeight="SemiBold"
                    Foreground="White"
                    Text="ðŸ“š Guide Professionali alla TAO" />
                <TextBlock
                    Margin="0,5,0,0"
                    FontSize="12"
                    Foreground="#E6F2FF"
                    Text="Seleziona una guida da consultare" />
            </StackPanel>
        </Border>

        <!--  Content  -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <!--  Interazioni Farmacologiche  -->
                <Button
                    Click="OpenInteractions_Click"
                    Style="{StaticResource GuideButtonStyle}">
                    <StackPanel>
                        <TextBlock
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="#0078D4"
                            Text="ðŸ’Š Interazioni Farmacologiche Warfarin" />
                        <TextBlock
                            Margin="0,5,0,0"
                            FontSize="11"
                            Foreground="#666666"
                            Text="Guida completa alle interazioni farmacologiche del Warfarin con altri farmaci"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Button>

                <!--  Flowchart Gestione INR  -->
                <Button
                    Click="OpenFlowchart_Click"
                    Style="{StaticResource GuideButtonStyle}">
                    <StackPanel>
                        <TextBlock
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="#0078D4"
                            Text="ðŸ“Š Flowchart Gestione INR" />
                        <TextBlock
                            Margin="0,5,0,0"
                            FontSize="11"
                            Foreground="#666666"
                            Text="Algoritmo decisionale interattivo per la gestione dei valori INR fuori range"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Button>

                <!--  Infografica TAO  -->
                <Button
                    Click="OpenInfographic_Click"
                    Style="{StaticResource GuideButtonStyle}">
                    <StackPanel>
                        <TextBlock
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="#0078D4"
                            Text="ðŸ“‹ Infografica Gestione TAO" />
                        <TextBlock
                            Margin="0,5,0,0"
                            FontSize="11"
                            Foreground="#666666"
                            Text="Visualizzazione grafica delle informazioni chiave per la gestione della TAO"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Button>

                <!--  Guida MMG - Testo  -->
                <Button
                    Click="OpenGuideText_Click"
                    Style="{StaticResource GuideButtonStyle}">
                    <StackPanel>
                        <TextBlock
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="#0078D4"
                            Text="ðŸ“„ Guida TAO per MMG (Testo)" />
                        <TextBlock
                            Margin="0,5,0,0"
                            FontSize="11"
                            Foreground="#666666"
                            Text="Guida completa alla terapia anticoagulante orale con Warfarin - versione HTML"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Button>

                <!--  Guida MMG - PDF  -->
                <Button
                    Click="OpenGuidePdf_Click"
                    Style="{StaticResource GuideButtonStyle}">
                    <StackPanel>
                        <TextBlock
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="#0078D4"
                            Text="ðŸ“• Guida TAO per MMG (PDF)" />
                        <TextBlock
                            Margin="0,5,0,0"
                            FontSize="11"
                            Foreground="#666666"
                            Text="Guida completa alla terapia anticoagulante orale con Warfarin - versione PDF con bookmarks"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Button>

                <!--  Guida Pazienti  -->
                <Button
                    Click="OpenPatientGuide_Click"
                    Style="{StaticResource GuideButtonStyle}">
                    <StackPanel>
                        <TextBlock
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="#0078D4"
                            Text="ðŸ‘¥ Guida per Pazienti" />
                        <TextBlock
                            Margin="0,5,0,0"
                            FontSize="11"
                            Foreground="#666666"
                            Text="Informazioni per i pazienti in terapia con Warfarin - PDF"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </ScrollViewer>

        <!--  Footer  -->
        <Border
            Grid.Row="2"
            Padding="20,12"
            Background="#F5F5F5"
            BorderBrush="#E0E0E0"
            BorderThickness="0,1,0,0">
            <Button
                Width="100"
                Height="32"
                HorizontalAlignment="Right"
                Click="CloseButton_Click"
                Content="Chiudi"
                IsCancel="True">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#6C757D" />
                        <Setter Property="Foreground" Value="White" />
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="FontWeight" Value="SemiBold" />
                        <Setter Property="Cursor" Value="Hand" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border
                                        Background="{TemplateBinding Background}"
                                        CornerRadius="3">
                                        <ContentPresenter
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#5A6268" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Border>
    </Grid>
</Window>
