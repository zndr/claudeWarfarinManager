<Window x:Class="WarfarinManager.UI.Views.Dialogs.UpdateNotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Aggiornamento Disponibile"
        Width="600"
        Height="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Icona e titolo -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <Image Source="/Resources/Icons/taogest.ico"
                   Width="48"
                   Height="48"
                   Margin="0,0,15,0"/>
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Nuova Versione Disponibile!"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#2E7D32"/>
                <TextBlock x:Name="VersionTextBlock"
                           FontSize="14"
                           Margin="0,5,0,0"
                           Foreground="#666"/>
            </StackPanel>
        </StackPanel>

        <!-- Info versione -->
        <Border Grid.Row="1"
                Background="{DynamicResource ToolbarBackgroundBrush}"
                Padding="15"
                CornerRadius="5"
                Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0"
                           Text="Versione:"
                           FontWeight="Bold"
                           Margin="0,0,10,5"/>
                <TextBlock Grid.Row="0" Grid.Column="1"
                           x:Name="NewVersionTextBlock"
                           Margin="0,0,0,5"/>

                <TextBlock Grid.Row="1" Grid.Column="0"
                           Text="Data rilascio:"
                           FontWeight="Bold"
                           Margin="0,0,10,5"/>
                <TextBlock Grid.Row="1" Grid.Column="1"
                           x:Name="ReleaseDateTextBlock"
                           Margin="0,0,0,5"/>

                <TextBlock Grid.Row="2" Grid.Column="0"
                           Text="Dimensione:"
                           FontWeight="Bold"
                           Margin="0,0,10,5"/>
                <TextBlock Grid.Row="2" Grid.Column="1"
                           x:Name="FileSizeTextBlock"
                           Margin="0,0,0,5"/>

                <TextBlock Grid.Row="3" Grid.Column="0"
                           x:Name="HashLabelTextBlock"
                           Text="Hash SHA256:"
                           FontWeight="Bold"
                           Margin="0,0,10,0"
                           Visibility="Collapsed"/>
                <TextBlock Grid.Row="3" Grid.Column="1"
                           x:Name="HashTextBlock"
                           FontFamily="Consolas"
                           FontSize="10"
                           TextWrapping="Wrap"
                           Foreground="#666"
                           Visibility="Collapsed"/>
            </Grid>
        </Border>

        <!-- Badge critico (se applicabile) -->
        <Border x:Name="CriticalBadge"
                Grid.Row="2"
                Background="#D32F2F"
                Padding="10"
                CornerRadius="5"
                Margin="0,0,0,15"
                Visibility="Collapsed">
            <TextBlock Text="⚠ Aggiornamento critico - Si consiglia l'installazione immediata"
                       Foreground="{DynamicResource TextOnPrimaryBrush}"
                       FontWeight="Bold"
                       TextWrapping="Wrap"/>
        </Border>

        <!-- Note di rilascio -->
        <GroupBox Grid.Row="3"
                  Header="Novità in questa versione"
                  Margin="0,0,0,15">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBox x:Name="ReleaseNotesTextBox"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         BorderThickness="0"
                         Background="Transparent"
                         Padding="5"/>
            </ScrollViewer>
        </GroupBox>

        <!-- Pulsanti -->
        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button x:Name="DownloadButton"
                    Content="Scarica Aggiornamento"
                    Click="DownloadButton_Click"
                    Background="#2E7D32"
                    Foreground="{DynamicResource TextOnPrimaryBrush}"
                    FontWeight="Bold"/>
            <Button x:Name="RemindLaterButton"
                    Content="Ricordamelo Dopo"
                    Click="RemindLaterButton_Click"
                    IsCancel="True"/>
        </StackPanel>

        <!-- Footer -->
        <TextBlock Grid.Row="5"
                   Margin="0,15,0,0"
                   FontSize="11"
                   Foreground="#999"
                   TextAlignment="Center">
            <Run Text="Il download aprirà il browser web predefinito"/>
        </TextBlock>
    </Grid>
</Window>
