<Window
    x:Class="WarfarinManager.UI.Views.Dialogs.DeletePatientDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Elimina Paziente"
    Width="520"
    Height="450"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner"
    WindowStyle="ToolWindow">

    <Window.Resources>
        <Style x:Key="OptionButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="15,12" />
            <Setter Property="Margin" Value="0,5" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F0F0F0" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border
            Grid.Row="0"
            Padding="20,15"
            Background="#E81123">
            <StackPanel>
                <TextBlock
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="Elimina Paziente" />
                <TextBlock
                    Margin="0,5,0,0"
                    FontSize="13"
                    Foreground="#FFCCCC"
                    Text="{Binding PatientInfo}" />
            </StackPanel>
        </Border>

        <!-- Content -->
        <StackPanel Grid.Row="1" Margin="20">
            <TextBlock
                Margin="0,0,0,15"
                FontSize="13"
                Foreground="#333333"
                Text="Scegli come procedere con l'eliminazione:"
                TextWrapping="Wrap" />

            <!-- Opzione Soft Delete (Archivia) -->
            <Button
                Background="White"
                BorderBrush="#27AE60"
                Click="SoftDelete_Click"
                Style="{StaticResource OptionButtonStyle}">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            FontSize="16"
                            Foreground="#27AE60"
                            Text="ðŸ“¦ " />
                        <TextBlock
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="#27AE60"
                            Text="Archivia (consigliato)" />
                    </StackPanel>
                    <TextBlock
                        Margin="22,5,0,0"
                        FontSize="11"
                        Foreground="#666666"
                        Text="Il paziente sarÃ  nascosto ma i dati resteranno nel database."
                        TextWrapping="Wrap" />
                    <TextBlock
                        Margin="22,2,0,0"
                        FontSize="11"
                        Foreground="#888888"
                        Text="Potrai ripristinarlo in seguito se necessario." />
                </StackPanel>
            </Button>

            <!-- Opzione Hard Delete (Elimina definitivamente) -->
            <Button
                Background="White"
                BorderBrush="#E81123"
                Click="HardDelete_Click"
                Style="{StaticResource OptionButtonStyle}">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            FontSize="16"
                            Foreground="#E81123"
                            Text="ðŸ—‘ï¸ " />
                        <TextBlock
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="#E81123"
                            Text="Elimina definitivamente" />
                    </StackPanel>
                    <TextBlock
                        Margin="22,5,0,0"
                        FontSize="11"
                        Foreground="#666666"
                        Text="Il paziente e TUTTI i suoi dati saranno eliminati permanentemente."
                        TextWrapping="Wrap" />
                    <TextBlock
                        Margin="22,2,0,0"
                        FontSize="11"
                        FontWeight="SemiBold"
                        Foreground="#E81123"
                        Text="Questa operazione NON puÃ² essere annullata!" />
                </StackPanel>
            </Button>
        </StackPanel>

        <!-- Footer -->
        <Border
            Grid.Row="2"
            Padding="20,15"
            Background="#F5F5F5"
            BorderBrush="#E0E0E0"
            BorderThickness="0,1,0,0">
            <Button
                HorizontalAlignment="Right"
                Click="Cancel_Click"
                Content="Annulla"
                IsCancel="True"
                Padding="20,8" />
        </Border>
    </Grid>
</Window>
