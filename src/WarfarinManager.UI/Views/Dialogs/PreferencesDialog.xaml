<Window
    x:Class="WarfarinManager.UI.Views.Dialogs.PreferencesDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:WarfarinManager.UI.ViewModels"
    Title="Preferenze Applicazione"
    Width="550"
    Height="420"
    d:DataContext="{d:DesignInstance Type=vm:PreferencesViewModel}"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner"
    Background="{DynamicResource WindowBackgroundBrush}"
    mc:Ignorable="d">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <Style TargetType="Label">
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Margin" Value="0,10,0,5" />
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock
                FontSize="18"
                FontWeight="Bold"
                Foreground="{DynamicResource PrimaryBrush}"
                Text="Preferenze Applicazione" />
            <TextBlock
                Margin="0,5,0,0"
                FontSize="12"
                Foreground="{DynamicResource TextSecondaryBrush}"
                Text="Configura le opzioni dell'applicazione TaoGEST"
                TextWrapping="Wrap" />
        </StackPanel>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Sezione Integrazione Millewin -->
                <Border
                    Background="{DynamicResource CardBackgroundBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="15"
                    Margin="0,0,0,15">
                    <StackPanel>
                        <!-- Titolo sezione -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock
                                Text="&#xE774;"
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="20"
                                VerticalAlignment="Center"
                                Foreground="{DynamicResource PrimaryBrush}"
                                Margin="0,0,10,0"/>
                            <TextBlock
                                Text="Integrazione con Millewin"
                                FontSize="16"
                                FontWeight="SemiBold"
                                VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Descrizione -->
                        <TextBlock
                            Text="Abilita l'integrazione con il gestionale Millewin per importare pazienti e dati clinici dal database PostgreSQL (milleps)."
                            TextWrapping="Wrap"
                            FontSize="12"
                            Foreground="{DynamicResource TextSecondaryBrush}"
                            Margin="0,0,0,15"/>

                        <!-- Checkbox abilitazione -->
                        <CheckBox
                            IsChecked="{Binding IsMillewinIntegrationEnabled}"
                            Margin="0,0,0,15">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Abilita integrazione con Millewin" FontWeight="SemiBold"/>
                            </StackPanel>
                        </CheckBox>

                        <!-- Stato connessione -->
                        <Border
                            Background="{DynamicResource ContentBackgroundBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="10"
                            Margin="0,0,0,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Icona stato -->
                                <TextBlock
                                    Grid.Column="0"
                                    Text="{Binding ConnectionStatusIcon}"
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="18"
                                    VerticalAlignment="Center"
                                    Margin="0,0,10,0">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsConnectionAvailable}" Value="True">
                                                    <Setter Property="Foreground" Value="#27AE60"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsConnectionAvailable}" Value="False">
                                                    <Setter Property="Foreground" Value="#E74C3C"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <!-- Messaggio stato -->
                                <TextBlock
                                    Grid.Column="1"
                                    Text="{Binding ConnectionStatusMessage}"
                                    VerticalAlignment="Center"
                                    FontSize="12"/>

                                <!-- Progress durante il test -->
                                <ProgressBar
                                    Grid.Column="2"
                                    IsIndeterminate="True"
                                    Width="60"
                                    Height="8"
                                    Margin="10,0,0,0"
                                    Visibility="{Binding IsTestingConnection, Converter={StaticResource BoolToVis}}"/>
                            </Grid>
                        </Border>

                        <!-- Pulsante test connessione -->
                        <Button
                            Content="Testa Connessione"
                            Command="{Binding TestConnectionCommand}"
                            IsEnabled="{Binding IsMillewinIntegrationEnabled}"
                            HorizontalAlignment="Left"
                            Padding="15,8"/>

                        <!-- Note sui parametri di connessione -->
                        <TextBlock
                            Margin="0,15,0,0"
                            FontSize="11"
                            FontStyle="Italic"
                            Foreground="{DynamicResource TextSecondaryBrush}"
                            TextWrapping="Wrap"
                            Text="Parametri di connessione: Host=127.0.0.1, Porta=5432, Database=milleps"/>
                    </StackPanel>
                </Border>

                <!-- Funzionalita abilitate -->
                <Border
                    Background="{DynamicResource CardBackgroundBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="15"
                    Visibility="{Binding IsMillewinIntegrationEnabled, Converter={StaticResource BoolToVis}}">
                    <StackPanel>
                        <TextBlock
                            Text="Funzionalita abilitate con integrazione attiva:"
                            FontWeight="SemiBold"
                            Margin="0,0,0,10"/>

                        <StackPanel Margin="15,0,0,0">
                            <TextBlock Text="- Importazione pazienti da Millewin" Margin="0,3"/>
                            <TextBlock Text="- Aggiornamento dati biometrici (peso, altezza)" Margin="0,3"/>
                            <TextBlock Text="- Importazione esami laboratorio" Margin="0,3"/>
                            <TextBlock Text="- Sincronizzazione terapie continuative" Margin="0,3"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel
            Grid.Row="2"
            Margin="0,20,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Width="100"
                Height="35"
                Margin="0,0,10,0"
                Click="CancelButton_Click"
                Content="Annulla" />
            <Button
                Width="100"
                Height="35"
                Background="#2ECC71"
                Click="SaveButton_Click"
                Content="Salva"
                Foreground="White" />
        </StackPanel>
    </Grid>
</Window>
