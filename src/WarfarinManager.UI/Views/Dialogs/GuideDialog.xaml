<Window
    x:Class="WarfarinManager.UI.Views.Dialogs.GuideDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:WarfarinManager.UI.ViewModels"
    xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
    Title="{Binding GuideTitle}"
    Width="1200"
    Height="800"
    d:DataContext="{d:DesignInstance Type=vm:GuideViewModel}"
    WindowStartupLocation="CenterOwner"
    WindowState="Maximized"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Header con titolo e controlli  -->
        <Border
            Grid.Row="0"
            Background="#0078D4"
            Padding="15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel
                    Grid.Column="0"
                    Orientation="Horizontal"
                    VerticalAlignment="Center">
                    <TextBlock
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="ðŸ“š "
                        VerticalAlignment="Center" />
                    <TextBlock
                        FontSize="16"
                        FontWeight="SemiBold"
                        Foreground="White"
                        Text="{Binding GuideTitle}"
                        VerticalAlignment="Center" />
                </StackPanel>

                <StackPanel
                    Grid.Column="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
                    <Button
                        x:Name="RefreshButton"
                        Width="100"
                        Height="30"
                        Margin="0,0,10,0"
                        Background="#005A9E"
                        Click="RefreshButton_Click"
                        Content="ðŸ”„ Aggiorna"
                        FontSize="12"
                        Foreground="White" />
                    <Button
                        Width="100"
                        Height="30"
                        Background="#D13438"
                        Click="CloseButton_Click"
                        Content="âœ– Chiudi"
                        FontSize="12"
                        Foreground="White"
                        IsCancel="True" />
                </StackPanel>
            </Grid>
        </Border>

        <!--  WebView2 per visualizzare le guide HTML  -->
        <wv2:WebView2
            x:Name="webView"
            Grid.Row="1"
            Source="{Binding GuidePath}" />

        <!--  Status Bar  -->
        <Border
            Grid.Row="2"
            Background="#F5F5F5"
            BorderBrush="#DDDDDD"
            BorderThickness="0,1,0,0"
            Padding="10,5">
            <Grid>
                <TextBlock
                    x:Name="StatusText"
                    FontSize="11"
                    Foreground="#666"
                    Text="Pronto"
                    VerticalAlignment="Center" />
                <TextBlock
                    HorizontalAlignment="Right"
                    FontSize="10"
                    Foreground="#999"
                    Text="TaoGEST - Guide Professionali"
                    VerticalAlignment="Center" />
            </Grid>
        </Border>
    </Grid>
</Window>
