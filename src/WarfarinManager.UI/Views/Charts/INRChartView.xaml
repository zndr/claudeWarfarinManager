<UserControl
    x:Class="WarfarinManager.UI.Views.Charts.INRChartView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:WarfarinManager.UI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="400"
    d:DesignWidth="900"
    mc:Ignorable="d">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="280" />
        </Grid.ColumnDefinitions>

        <!--  Grafico principale  -->
        <Grid Grid.Column="0" Margin="0,0,15,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Header  -->
            <TextBlock
                Grid.Row="0"
                Margin="0,0,0,15"
                FontSize="18"
                FontWeight="SemiBold"
                Foreground="#333333"
                Text="Andamento INR" />

            <!--  Grafico  -->
            <Border
                Grid.Row="1"
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                CornerRadius="8">
                <Grid>
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Foreground="#999999"
                        Text="Nessun controllo INR disponibile"
                        Visibility="{Binding HasNoData, Converter={StaticResource BoolToVisibilityConverter}}" />

                    <lvc:CartesianChart
                        x:Name="ChartControl"
                        Margin="10"
                        ChartPointPointerDown="ChartControl_ChartPointPointerDown"
                        Series="{Binding Series}"
                        TooltipPosition="Hidden"
                        Visibility="{Binding HasData, Converter={StaticResource BoolToVisibilityConverter}}"
                        XAxes="{Binding XAxes}"
                        YAxes="{Binding YAxes}"
                        ZoomMode="X" />
                </Grid>
            </Border>

            <!--  Statistiche  -->
            <Grid Grid.Row="2" Margin="0,15,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock
                        FontSize="11"
                        Foreground="#999999"
                        Text="N° Controlli" />
                    <TextBlock
                        FontSize="18"
                        FontWeight="SemiBold"
                        Foreground="#333333"
                        Text="{Binding ControlCount}" />
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBlock
                        FontSize="11"
                        Foreground="#999999"
                        Text="INR Medio" />
                    <TextBlock
                        FontSize="18"
                        FontWeight="SemiBold"
                        Foreground="#333333"
                        Text="{Binding AverageINR, StringFormat=F2}" />
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock
                        FontSize="11"
                        Foreground="#999999"
                        Text="In Range" />
                    <TextBlock
                        FontSize="18"
                        FontWeight="SemiBold"
                        Foreground="#107C10"
                        Text="{Binding InRangePercentage, StringFormat={}{0:F0}%}" />
                </StackPanel>
            </Grid>
        </Grid>

        <!--  Pannello laterale dettagli  -->
        <Border
            Grid.Column="1"
            Padding="15"
            Background="White"
            BorderBrush="#E0E0E0"
            BorderThickness="1"
            CornerRadius="8"
            Visibility="{Binding HasSelectedPoint, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel>
                <Grid Margin="0,0,0,15">
                    <TextBlock
                        FontSize="16"
                        FontWeight="SemiBold"
                        Foreground="#333333"
                        Text="Dettagli Controllo" />
                    <Button
                        Padding="6,2"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Background="Transparent"
                        BorderThickness="0"
                        Command="{Binding ClearSelectionCommand}"
                        Content="✕"
                        Cursor="Hand"
                        FontSize="14" />
                </Grid>

                <StackPanel>
                    <!--  Data  -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock
                            FontSize="10"
                            Foreground="#999999"
                            Text="DATA" />
                        <TextBlock
                            Margin="0,4,0,0"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="#333333"
                            Text="{Binding SelectedDate}" />
                    </StackPanel>

                    <!--  INR  -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock
                            FontSize="10"
                            Foreground="#999999"
                            Text="VALORE INR" />
                        <TextBlock
                            Margin="0,4,0,0"
                            FontSize="28"
                            FontWeight="Bold"
                            Foreground="#0078D4"
                            Text="{Binding SelectedINR}" />
                    </StackPanel>

                    <!--  Dose  -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock
                            FontSize="10"
                            Foreground="#999999"
                            Text="DOSE SETTIMANALE" />
                        <TextBlock
                            Margin="0,4,0,0"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="#333333"
                            Text="{Binding SelectedDose}" />
                    </StackPanel>

                    <!--  Fase  -->
                    <StackPanel>
                        <TextBlock
                            FontSize="10"
                            Foreground="#999999"
                            Text="FASE TERAPIA" />
                        <TextBlock
                            Margin="0,4,0,0"
                            FontSize="13"
                            Foreground="#666666"
                            Text="{Binding SelectedPhase}" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>

        <!--  Messaggio quando nessun punto selezionato  -->
        <Border
            Grid.Column="1"
            Padding="20"
            Background="#F5F5F5"
            BorderBrush="#E0E0E0"
            BorderThickness="1"
            CornerRadius="8"
            Visibility="{Binding HasSelectedPoint, Converter={StaticResource InverseBoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock
                    FontSize="48"
                    Foreground="#CCCCCC"
                    Text="📍"
                    TextAlignment="Center" />
                <TextBlock
                    Margin="0,10,0,0"
                    FontSize="12"
                    Foreground="#999999"
                    Text="Clicca su un punto del grafico"
                    TextAlignment="Center" />
                <TextBlock
                    FontSize="12"
                    Foreground="#999999"
                    Text="per vedere i dettagli"
                    TextAlignment="Center" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
