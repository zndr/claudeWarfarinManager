<UserControl
    x:Class="WarfarinManager.UI.Views.Charts.INRChartView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:WarfarinManager.UI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="400"
    d:DesignWidth="900"
    mc:Ignorable="d">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="280" />
        </Grid.ColumnDefinitions>

        <!--  Grafico principale  -->
        <Border
            Grid.Column="0"
            Margin="0,0,15,0"
            Background="{DynamicResource CardBackgroundBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="8">
            <Grid>
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="14"
                    Foreground="{DynamicResource TextTertiaryBrush}"
                    Text="Nessun controllo INR disponibile"
                    Visibility="{Binding HasNoData, Converter={StaticResource BoolToVisibilityConverter}}" />

                <lvc:CartesianChart
                    x:Name="ChartControl"
                    Margin="10"
                    ChartPointPointerDown="ChartControl_ChartPointPointerDown"
                    Series="{Binding Series}"
                    TooltipPosition="Hidden"
                    Visibility="{Binding HasData, Converter={StaticResource BoolToVisibilityConverter}}"
                    XAxes="{Binding XAxes}"
                    YAxes="{Binding YAxes}"
                    ZoomMode="X" />
            </Grid>
        </Border>

        <!--  Pannello laterale dettagli  -->
        <Border
            Grid.Column="1"
            MinHeight="380"
            Padding="10"
            VerticalAlignment="Top"
            Background="{DynamicResource CardBackgroundBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="8"
            Visibility="{Binding HasSelectedPoint, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel>
                <Grid Margin="0,0,0,10">
                    <TextBlock
                        FontSize="13"
                        FontWeight="SemiBold"
                        Foreground="{DynamicResource TextPrimaryBrush}"
                        Text="Dettagli Controllo" />
                    <Button
                        Padding="6,2"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Background="Transparent"
                        BorderThickness="0"
                        Command="{Binding ClearSelectionCommand}"
                        Content="✕"
                        Cursor="Hand"
                        FontSize="14" />
                </Grid>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  Data  -->
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="0,0,8,6"
                        FontSize="10"
                        Foreground="{DynamicResource TextTertiaryBrush}"
                        Text="DATA:" />
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="0,0,0,6"
                        FontSize="11"
                        FontWeight="SemiBold"
                        Foreground="{DynamicResource TextPrimaryBrush}"
                        Text="{Binding SelectedDate}" />

                    <!--  INR  -->
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="0,0,8,6"
                        VerticalAlignment="Center"
                        FontSize="10"
                        Foreground="{DynamicResource TextTertiaryBrush}"
                        Text="INR:" />
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="0,0,0,6"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="{DynamicResource PrimaryBrush}"
                        Text="{Binding SelectedINR}" />

                    <!--  Dose  -->
                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="0"
                        Margin="0,0,8,6"
                        FontSize="10"
                        Foreground="{DynamicResource TextTertiaryBrush}"
                        Text="DOSE:" />
                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="1"
                        Margin="0,0,0,6"
                        FontSize="11"
                        FontWeight="SemiBold"
                        Foreground="{DynamicResource TextPrimaryBrush}"
                        Text="{Binding SelectedDose}" />

                    <!--  Fase  -->
                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="0"
                        Margin="0,0,8,0"
                        FontSize="10"
                        Foreground="{DynamicResource TextTertiaryBrush}"
                        Text="FASE:" />
                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="1"
                        FontSize="11"
                        Foreground="{DynamicResource TextSecondaryBrush}"
                        Text="{Binding SelectedPhase}" />
                </Grid>
            </StackPanel>
        </Border>

        <!--  Messaggio quando nessun punto selezionato  -->
        <Border
            Grid.Column="1"
            MinHeight="380"
            Padding="20"
            VerticalAlignment="Top"
            Background="{DynamicResource ToolbarBackgroundBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="8"
            Visibility="{Binding HasSelectedPoint, Converter={StaticResource InverseBoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock
                    FontSize="48"
                    Foreground="#CCCCCC"
                    Text="📍"
                    TextAlignment="Center" />
                <TextBlock
                    Margin="0,10,0,0"
                    FontSize="12"
                    Foreground="{DynamicResource TextTertiaryBrush}"
                    Text="Clicca su un punto del grafico"
                    TextAlignment="Center" />
                <TextBlock
                    FontSize="12"
                    Foreground="{DynamicResource TextTertiaryBrush}"
                    Text="per vedere i dettagli"
                    TextAlignment="Center" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
