<Window x:Class="WarfarinManager.UI.Views.Tools.WeeklyDoseCalculatorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Calcola dose settimanale warfarin"
        Width="520" Height="620"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="Auto"/>
            <!-- Checkbox -->
            <RowDefinition Height="*"/>
            <!-- Daily doses -->
            <RowDefinition Height="Auto"/>
            <!-- Weekly total -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="Distribuzione settimanale"
                   FontSize="18" FontWeight="Bold"
                   Foreground="#0078D4"
                   Margin="0,0,0,20"/>

        <!-- Exclude quarters checkbox -->
        <CheckBox Grid.Row="1"
                  Content="Escludi quarti di compressa (1.25 mg)"
                  IsChecked="{Binding ExcludeQuarters}"
                  FontSize="12"
                  Margin="0,0,0,20"/>

        <!-- Daily doses section -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="0,0,0,15">
            <StackPanel>
                <!-- Monday -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="110"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Lunedì:" VerticalAlignment="Center" FontSize="13"/>
                    <ComboBox Grid.Column="1"
                              ItemsSource="{Binding MondayDoses}"
                              SelectedItem="{Binding SelectedMondayDose}"
                              DisplayMemberPath="DisplayText"
                              MinWidth="200"/>
                </Grid>

                <!-- Tuesday -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="110"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Martedì:" VerticalAlignment="Center" FontSize="13"/>
                    <ComboBox Grid.Column="1"
                              ItemsSource="{Binding TuesdayDoses}"
                              SelectedItem="{Binding SelectedTuesdayDose}"
                              DisplayMemberPath="DisplayText"
                              MinWidth="200"/>
                </Grid>

                <!-- Wednesday -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="110"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Mercoledì:" VerticalAlignment="Center" FontSize="13"/>
                    <ComboBox Grid.Column="1"
                              ItemsSource="{Binding WednesdayDoses}"
                              SelectedItem="{Binding SelectedWednesdayDose}"
                              DisplayMemberPath="DisplayText"
                              MinWidth="200"/>
                </Grid>

                <!-- Thursday -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="110"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Giovedì:" VerticalAlignment="Center" FontSize="13"/>
                    <ComboBox Grid.Column="1"
                              ItemsSource="{Binding ThursdayDoses}"
                              SelectedItem="{Binding SelectedThursdayDose}"
                              DisplayMemberPath="DisplayText"
                              MinWidth="200"/>
                </Grid>

                <!-- Friday -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="110"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Venerdì:" VerticalAlignment="Center" FontSize="13"/>
                    <ComboBox Grid.Column="1"
                              ItemsSource="{Binding FridayDoses}"
                              SelectedItem="{Binding SelectedFridayDose}"
                              DisplayMemberPath="DisplayText"
                              MinWidth="200"/>
                </Grid>

                <!-- Saturday -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="110"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Sabato:" VerticalAlignment="Center" FontSize="13"/>
                    <ComboBox Grid.Column="1"
                              ItemsSource="{Binding SaturdayDoses}"
                              SelectedItem="{Binding SelectedSaturdayDose}"
                              DisplayMemberPath="DisplayText"
                              MinWidth="200"/>
                </Grid>

                <!-- Sunday -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="110"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Domenica:" VerticalAlignment="Center" FontSize="13"/>
                    <ComboBox Grid.Column="1"
                              ItemsSource="{Binding SundayDoses}"
                              SelectedItem="{Binding SelectedSundayDose}"
                              DisplayMemberPath="DisplayText"
                              MinWidth="200"/>
                </Grid>
            </StackPanel>
        </ScrollViewer>

        <!-- Weekly total display -->
        <Border Grid.Row="3"
                Background="#F5F5F5"
                BorderBrush="#CCCCCC"
                BorderThickness="1"
                Padding="15"
                Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="Dose settimanale totale:"
                           FontWeight="Bold"
                           FontSize="12"
                           Margin="0,0,0,5"/>
                <TextBlock FontSize="20" FontWeight="Bold" Foreground="#0078D4">
                    <Run Text="{Binding CurrentWeeklyDose, Mode=OneWay, StringFormat='{}{0:F1}'}"/>
                    <Run Text=" mg"/>
                </TextBlock>
                <TextBlock FontSize="11" Foreground="#666666" Margin="0,2,0,0">
                    <Run Text="("/>
                    <Run Text="{Binding CurrentWeeklyTablets, Mode=OneWay}"/>
                    <Run Text=")"/>
                </TextBlock>
                <TextBlock Text="{Binding ShortSchedule}"
                           TextWrapping="Wrap"
                           Margin="0,10,0,0"
                           FontStyle="Italic"
                           FontSize="11"
                           Foreground="#666666"/>
            </StackPanel>
        </Border>

        <!-- Action buttons -->
        <UniformGrid Grid.Row="4"
                     Rows="1" Columns="3"
                     HorizontalAlignment="Stretch">
            <Button Content="Ricalcola schema"
                    Command="{Binding RecalculateScheduleCommand}"
                    Margin="0,0,5,0"
                    Padding="10,8"
                    Background="#0078D4"
                    Foreground="White"
                    BorderThickness="0"
                    FontWeight="SemiBold">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            Padding="{TemplateBinding Padding}"
                                            CornerRadius="3">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#106EBE"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#CCCCCC"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="Copia negli appunti"
                    Command="{Binding CopyToClipboardCommand}"
                    Margin="5,0,5,0"
                    Padding="10,8"
                    Background="#107C10"
                    Foreground="White"
                    BorderThickness="0"
                    FontWeight="SemiBold">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            Padding="{TemplateBinding Padding}"
                                            CornerRadius="3">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#0E6B0E"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="Esporta PDF"
                    Command="{Binding ExportPdfCommand}"
                    Margin="5,0,0,0"
                    Padding="10,8"
                    Background="#D13438"
                    Foreground="White"
                    BorderThickness="0"
                    FontWeight="SemiBold">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            Padding="{TemplateBinding Padding}"
                                            CornerRadius="3">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#B72C2F"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </UniformGrid>
    </Grid>
</Window>
