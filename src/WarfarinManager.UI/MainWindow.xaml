<Window x:Class="WarfarinManager.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:WarfarinManager.UI.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:MainViewModel}"
        Title="{Binding Title}" 
        Height="600" 
        Width="1000"
        MinWidth="800"
        MinHeight="500"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="20,10">
            <TextBlock Text="WarfarinManager Pro - Gestione Terapia Anticoagulante"
                       Foreground="White"
                       FontSize="18"
                       FontWeight="SemiBold"/>
        </Border>

        <!-- Content Area -->
        <Border Grid.Row="1" Padding="20">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Benvenuto in WarfarinManager Pro"
                           FontSize="24"
                           FontWeight="Bold"
                           Margin="0,0,0,20"
                           HorizontalAlignment="Center"/>
                
                <TextBlock Text="Applicazione per la gestione ottimizzata della terapia anticoagulante con warfarin"
                           FontSize="14"
                           Foreground="#7F8C8D"
                           TextWrapping="Wrap"
                           MaxWidth="500"
                           TextAlignment="Center"
                           Margin="0,0,0,30"/>
                
                <TextBlock Text="✓ Database configurato correttamente"
                           FontSize="14"
                           Foreground="#27AE60"
                           HorizontalAlignment="Center"
                           Margin="0,5"/>
                
                <TextBlock Text="✓ Core business logic pronta"
                           FontSize="14"
                           Foreground="#27AE60"
                           HorizontalAlignment="Center"
                           Margin="0,5"/>
                
                <TextBlock Text="⏳ Interfaccia utente in sviluppo..."
                           FontSize="14"
                           Foreground="#F39C12"
                           HorizontalAlignment="Center"
                           Margin="0,5"/>
            </StackPanel>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#ECF0F1" Padding="10,5">
            <TextBlock Text="Versione 1.0.0 - Development Build"
                       FontSize="11"
                       Foreground="#7F8C8D"/>
        </Border>
    </Grid>
</Window>
