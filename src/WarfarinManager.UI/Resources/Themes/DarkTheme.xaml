<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Dark Theme Color Palette -->

    <!-- Primary Brand Colors -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="#4A9EFF"/>
    <SolidColorBrush x:Key="PrimaryHoverBrush" Color="#6BB3FF"/>
    <SolidColorBrush x:Key="PrimaryPressedBrush" Color="#2A8EFF"/>

    <!-- Accent Colors -->
    <SolidColorBrush x:Key="AccentBrush" Color="#4A9EFF"/>
    <SolidColorBrush x:Key="AccentHoverBrush" Color="#6BB3FF"/>

    <!-- Semantic Colors -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#4CAF50"/>
    <SolidColorBrush x:Key="SuccessHoverBrush" Color="#66BB6A"/>
    <SolidColorBrush x:Key="SuccessLightBrush" Color="#1B5E20"/>

    <SolidColorBrush x:Key="DangerBrush" Color="#F44336"/>
    <SolidColorBrush x:Key="DangerHoverBrush" Color="#EF5350"/>
    <SolidColorBrush x:Key="DangerLightBrush" Color="#B71C1C"/>

    <SolidColorBrush x:Key="WarningBrush" Color="#FFA726"/>
    <SolidColorBrush x:Key="WarningHoverBrush" Color="#FFB74D"/>
    <SolidColorBrush x:Key="WarningLightBrush" Color="#E65100"/>

    <SolidColorBrush x:Key="InfoBrush" Color="#4A9EFF"/>
    <SolidColorBrush x:Key="InfoLightBrush" Color="#0D47A1"/>

    <!-- Background Colors -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="ContentBackgroundBrush" Color="#252526"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#2D2D30"/>
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#1C1C1C"/>
    <SolidColorBrush x:Key="ToolbarBackgroundBrush" Color="#2D2D30"/>
    <SolidColorBrush x:Key="StatusBarBackgroundBrush" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="HoverBackgroundBrush" Color="#3E3E42"/>
    <SolidColorBrush x:Key="SelectedBackgroundBrush" Color="#094771"/>

    <!-- Border Colors -->
    <SolidColorBrush x:Key="BorderBrush" Color="#3F3F46"/>
    <SolidColorBrush x:Key="BorderLightBrush" Color="#333337"/>
    <SolidColorBrush x:Key="BorderDarkBrush" Color="#555555"/>
    <SolidColorBrush x:Key="FocusBorderBrush" Color="#4A9EFF"/>

    <!-- Text Colors -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#CCCCCC"/>
    <SolidColorBrush x:Key="TextTertiaryBrush" Color="#999999"/>
    <SolidColorBrush x:Key="TextOnPrimaryBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TextOnDarkBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TextDisabledBrush" Color="#6D6D6D"/>

    <!-- Control Colors -->
    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="#3F3F46"/>
    <SolidColorBrush x:Key="ControlBorderBrush" Color="#555555"/>
    <SolidColorBrush x:Key="ControlHoverBrush" Color="#4E4E52"/>
    <SolidColorBrush x:Key="ControlPressedBrush" Color="#333337"/>
    <SolidColorBrush x:Key="ControlDisabledBrush" Color="#2D2D30"/>

    <!-- DataGrid Colors -->
    <SolidColorBrush x:Key="DataGridHeaderBrush" Color="#2D2D30"/>
    <SolidColorBrush x:Key="DataGridRowBrush" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="DataGridAlternateRowBrush" Color="#252526"/>
    <SolidColorBrush x:Key="DataGridHoverBrush" Color="#3E3E42"/>
    <SolidColorBrush x:Key="DataGridSelectedBrush" Color="#094771"/>
    <SolidColorBrush x:Key="DataGridSelectedTextBrush" Color="#FFFFFF"/>

    <!-- Shadow Colors -->
    <Color x:Key="ShadowColor">#80000000</Color>

</ResourceDictionary>
