<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Light Theme Color Palette -->

    <!-- Primary Brand Colors -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="PrimaryHoverBrush" Color="#106EBE"/>
    <SolidColorBrush x:Key="PrimaryPressedBrush" Color="#005A9E"/>

    <!-- Accent Colors -->
    <SolidColorBrush x:Key="AccentBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="AccentHoverBrush" Color="#106EBE"/>

    <!-- Semantic Colors -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#107C10"/>
    <SolidColorBrush x:Key="SuccessHoverBrush" Color="#0D6C0D"/>
    <SolidColorBrush x:Key="SuccessLightBrush" Color="#E8F5E9"/>

    <SolidColorBrush x:Key="DangerBrush" Color="#D13438"/>
    <SolidColorBrush x:Key="DangerHoverBrush" Color="#A12A2D"/>
    <SolidColorBrush x:Key="DangerLightBrush" Color="#FFEBEE"/>

    <SolidColorBrush x:Key="WarningBrush" Color="#FF9800"/>
    <SolidColorBrush x:Key="WarningHoverBrush" Color="#E68900"/>
    <SolidColorBrush x:Key="WarningLightBrush" Color="#FFF3E0"/>

    <SolidColorBrush x:Key="InfoBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="InfoLightBrush" Color="#E3F2FD"/>

    <!-- Background Colors -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ContentBackgroundBrush" Color="#F8F9FA"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#2C3E50"/>
    <SolidColorBrush x:Key="ToolbarBackgroundBrush" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="StatusBarBackgroundBrush" Color="#ECF0F1"/>
    <SolidColorBrush x:Key="HoverBackgroundBrush" Color="#F0F0F0"/>
    <SolidColorBrush x:Key="SelectedBackgroundBrush" Color="#E3F2FD"/>

    <!-- Border Colors -->
    <SolidColorBrush x:Key="BorderBrush" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="BorderLightBrush" Color="#F0F0F0"/>
    <SolidColorBrush x:Key="BorderDarkBrush" Color="#CCCCCC"/>
    <SolidColorBrush x:Key="FocusBorderBrush" Color="#0078D4"/>

    <!-- Text Colors -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#212121"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#666666"/>
    <SolidColorBrush x:Key="TextTertiaryBrush" Color="#999999"/>
    <SolidColorBrush x:Key="TextOnPrimaryBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TextOnDarkBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TextDisabledBrush" Color="#BDBDBD"/>

    <!-- Control Colors -->
    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ControlBorderBrush" Color="#D0D0D0"/>
    <SolidColorBrush x:Key="ControlHoverBrush" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="ControlPressedBrush" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="ControlDisabledBrush" Color="#F5F5F5"/>

    <!-- DataGrid Colors -->
    <SolidColorBrush x:Key="DataGridHeaderBrush" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="DataGridRowBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="DataGridAlternateRowBrush" Color="#FAFAFA"/>
    <SolidColorBrush x:Key="DataGridHoverBrush" Color="#F0F0F0"/>
    <SolidColorBrush x:Key="DataGridSelectedBrush" Color="#E3F2FD"/>
    <SolidColorBrush x:Key="DataGridSelectedTextBrush" Color="#212121"/>

    <!-- Shadow Colors -->
    <Color x:Key="ShadowColor">#40000000</Color>

</ResourceDictionary>
